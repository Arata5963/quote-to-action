<%# app/views/cheers/_cheer_button_floating.html.erb %>
<%# フローティングアクションバー用応援ボタン（note.com風） %>

<% if user_signed_in? %>
  <% if post.cheered_by?(current_user) %>
    <%# 応援済み（ピンク塗りつぶし） %>
    <% cheer = post.cheers.find_by(user: current_user) %>
    <%= button_to post_cheer_path(post, cheer),
                  method: :delete,
                  data: { turbo_frame: "_top" },
                  class: "flex items-center gap-1.5 text-pink-500 hover:text-pink-600 transition-colors group" do %>
      <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
        <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
      </svg>
      <span class="text-sm font-medium"><%= post.cheers.count %></span>
    <% end %>
  <% else %>
    <%# 未応援（グレー枠線） %>
    <%= button_to post_cheers_path(post),
                  method: :post,
                  data: { turbo_frame: "_top" },
                  class: "flex items-center gap-1.5 text-gray-400 hover:text-pink-500 transition-colors group" do %>
      <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z"/>
      </svg>
      <span class="text-sm font-medium"><%= post.cheers.count %></span>
    <% end %>
  <% end %>
<% else %>
  <%# 未ログイン %>
  <%= link_to new_user_session_path, class: "flex items-center gap-1.5 text-gray-400 hover:text-pink-500 transition-colors" do %>
    <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z"/>
    </svg>
    <span class="text-sm font-medium"><%= post.cheers.count %></span>
  <% end %>
<% end %>
