<%# app/views/achievements/_button_floating.html.erb %>
<%# NOTE: Achievements are now managed at PostEntry level via PostEntriesController#achieve %>
<% achieved_count = post.post_entries.where.not(achieved_at: nil).count %>
<% if achieved_count > 0 %>
  <div class="flex items-center gap-1.5 text-green-500" title="<%= achieved_count %> achieved">
    <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
      <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
    </svg>
    <span class="text-sm font-medium"><%= achieved_count %></span>
  </div>
<% end %>
