<%# app/views/achievements/_button.html.erb %>
<%# NOTE: Achievements are now managed at PostEntry level via PostEntriesController#achieve %>
<% achieved_count = post.post_entries.where.not(achieved_at: nil).count %>
<% if achieved_count > 0 %>
  <span class="inline-flex items-center gap-1 text-xs text-gray-500" title="<%= achieved_count %> achieved">
    <svg class="w-4 h-4 text-green-500" viewBox="0 0 24 24" fill="currentColor">
      <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
    </svg>
    <%= achieved_count %>
  </span>
<% end %>
