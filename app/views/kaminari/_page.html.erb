<%# 各ページ番号のリンク %>
<% if page.current? %>
  <span class="px-4 py-2 border-2 border-accent bg-accent text-white font-bold rounded-lg">
    <%= page %>
  </span>
<% else %>
  <%= link_to page, url, class: "px-4 py-2 border-2 border-accent/30 bg-white hover:bg-accent/10 text-primary font-bold rounded-lg transition-colors", rel: page.rel %>
<% end %>