<%# 各ページ番号のリンク %>
<% if page.current? %>
  <span class="px-4 py-2 border-2 border-black bg-black text-white font-bold">
    <%= page %>
  </span>
<% else %>
  <%= link_to page, url, class: "px-4 py-2 border-2 border-black bg-white hover:bg-gray-100 font-bold transition-colors", rel: page.rel %>
<% end %>