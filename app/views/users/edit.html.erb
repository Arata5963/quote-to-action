<%# app/views/users/edit.html.erb %>
<% content_for :title, "マイページ" %>

<div class="min-h-screen py-8">
  <div class="max-w-2xl mx-auto px-4">

    <%# 戻るリンク %>
    <div class="mb-6">
      <%= link_to posts_path, class: "inline-flex items-center gap-2 text-primary/60 hover:text-accent transition-colors" do %>
        <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
          <path d="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.42-1.41L7.83 13H20v-2z"/>
        </svg>
        <span>投稿一覧に戻る</span>
      <% end %>
    </div>

    <div class="bg-white rounded-2xl border border-accent/20 shadow-sm p-6 lg:p-8">

      <%# ページタイトル %>
      <h1 class="text-2xl font-bold text-primary mb-8">マイページ</h1>

      <%= form_with(model: @user, url: mypage_path, method: :patch, local: true, html: { multipart: true, class: "space-y-6" }) do |form| %>
        <%# エラーメッセージ表示 %>
        <% if @user.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-xl p-4">
            <div class="flex items-start gap-3">
              <svg class="w-5 h-5 text-red-500 flex-shrink-0 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
              <div>
                <h3 class="font-medium text-red-700">
                  <%= pluralize(@user.errors.count, "件") %>のエラーがあります
                </h3>
                <ul class="mt-2 text-sm text-red-600 list-disc list-inside">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <%# プロフィール画像 %>
        <div>
          <label class="block text-sm font-semibold text-primary mb-4">プロフィール画像</label>

          <div class="flex items-center gap-6">
            <%# 現在の画像表示 %>
            <div class="flex-shrink-0">
              <% if @user.avatar.present? %>
                <%= image_tag @user.avatar.url, alt: "現在のプロフィール画像",
                      class: "h-24 w-24 rounded-full object-cover border-2 border-accent/20" %>
              <% else %>
                <div class="h-24 w-24 bg-accent/10 rounded-full flex items-center justify-center border-2 border-accent/20">
                  <svg class="h-12 w-12 text-primary/40" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                  </svg>
                </div>
              <% end %>
            </div>

            <%# ファイル選択 %>
            <div class="flex-1">
              <label class="flex flex-col items-center justify-center px-4 py-6 rounded-xl border-2 border-dashed border-accent/30 hover:border-accent cursor-pointer transition-colors">
                <%= form.file_field :avatar, accept: "image/*", class: "sr-only" %>
                <svg class="h-8 w-8 text-primary/40" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <p class="mt-2 text-sm text-primary/80">クリックして画像を選択</p>
                <p class="text-xs text-primary/60 mt-1">JPG, PNG, GIF (最大2MB)</p>
              </label>
            </div>
          </div>

          <%= form.hidden_field :avatar_cache %>
        </div>

        <%# ユーザー名 %>
        <div>
          <%= form.label :name, class: "block text-sm font-semibold text-primary mb-2" do %>
            ユーザー名
          <% end %>
          <%= form.text_field :name,
                placeholder: "ユーザー名を入力",
                class: "w-full px-4 py-3 rounded-xl border border-accent/30 text-primary placeholder-primary/40 focus:border-accent focus:ring-1 focus:ring-accent transition-colors" %>
        </div>

        <%# メールアドレス（表示のみ） %>
        <div>
          <label class="block text-sm font-semibold text-primary mb-2">メールアドレス</label>
          <div class="w-full px-4 py-3 rounded-xl border border-accent/20 bg-cream text-primary/80">
            <%= @user.email %>
          </div>
        </div>

        <%# ボタンエリア %>
        <div class="pt-4">
          <%= form.submit "更新する",
                class: "w-full inline-flex items-center justify-center gap-2 px-6 py-3 rounded-xl bg-accent text-white font-semibold hover:bg-accent/90 transition-colors cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
