<%# app/views/users/show.html.erb %>
<% content_for :title, @is_own_page ? "マイページ" : "#{@user.name}のプロフィール" %>

<div class="min-h-screen py-8">
  <div class="max-w-2xl mx-auto px-4">

    <%# 戻るリンク %>
    <div class="mb-6">
      <%= link_to posts_path, class: "inline-flex items-center gap-2 text-primary/60 hover:text-accent transition-colors" do %>
        <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
          <path d="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.42-1.41L7.83 13H20v-2z"/>
        </svg>
        <span>投稿一覧に戻る</span>
      <% end %>
    </div>

    <%# プロフィール表示 %>
    <div class="bg-white rounded-2xl border border-accent/20 shadow-sm p-6 lg:p-8">

      <% if @is_own_page %>
        <%# 編集リンク（自分のページのみ） %>
        <div class="flex justify-end mb-4">
          <%= link_to edit_profile_path, class: "flex items-center gap-2 px-4 py-2 rounded-xl bg-cream hover:bg-accent/10 text-primary hover:text-accent transition-colors" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
            </svg>
            <span class="text-sm font-medium">編集</span>
          <% end %>
        </div>
      <% end %>

      <%# プロフィール画像・ユーザー名 %>
      <div class="flex items-center gap-6">
        <div class="flex-shrink-0">
          <% if @user.avatar.present? %>
            <%= image_tag @user.avatar.url, alt: "プロフィール画像",
                  class: "h-24 w-24 rounded-full object-cover border-2 border-accent/20" %>
          <% else %>
            <div class="h-24 w-24 bg-accent/10 rounded-full flex items-center justify-center border-2 border-accent/20">
              <svg class="h-12 w-12 text-primary/40" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
              </svg>
            </div>
          <% end %>
        </div>
        <div>
          <h2 class="text-xl font-semibold text-primary"><%= @user.name.presence || "名無しさん" %></h2>
        </div>
      </div>

    </div>

    <% if @is_own_page %>
      <%# 自分のページ: タブセクション %>
      <div class="mt-6 bg-white rounded-2xl border border-accent/20 shadow-sm overflow-hidden" data-controller="tabs">
        <%# タブヘッダー %>
        <div class="border-b border-accent/10">
          <div class="flex">
            <button type="button"
                    class="mypage-tab flex-1 px-4 py-3 text-sm font-medium transition-colors cursor-pointer"
                    data-tabs-target="tab"
                    data-action="click->tabs#switch"
                    data-tab-index="0">
              達成済み
            </button>
            <button type="button"
                    class="mypage-tab flex-1 px-4 py-3 text-sm font-medium transition-colors cursor-pointer"
                    data-tabs-target="tab"
                    data-action="click->tabs#switch"
                    data-tab-index="1">
              みただけ？
            </button>
            <button type="button"
                    class="mypage-tab flex-1 px-4 py-3 text-sm font-medium transition-colors cursor-pointer"
                    data-tabs-target="tab"
                    data-action="click->tabs#switch"
                    data-tab-index="2">
              達成カレンダー
            </button>
          </div>
        </div>

        <%# タブコンテンツ %>
        <%# 達成済み %>
        <div class="p-4" data-tabs-target="panel" data-panel-index="0">
          <% if @achieved_posts.any? %>
            <div class="space-y-4">
              <% @achieved_posts.each do |post| %>
                <%= render 'posts/post_card', post: post, from: 'mypage' %>
              <% end %>
            </div>
          <% else %>
            <div class="py-12 text-center">
              <div class="text-primary/40 mb-4">
                <svg class="w-12 h-12 mx-auto" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                </svg>
              </div>
              <p class="text-primary/60">達成済みの投稿がありません</p>
            </div>
          <% end %>
        </div>

        <%# みただけ？ %>
        <div class="p-4 hidden" data-tabs-target="panel" data-panel-index="1">
          <% if @unachieved_posts.any? %>
            <div class="space-y-4">
              <% @unachieved_posts.each do |post| %>
                <%= render 'posts/post_card', post: post, from: 'mypage' %>
              <% end %>
            </div>
          <% else %>
            <div class="py-12 text-center">
              <div class="text-primary/40 mb-4">
                <svg class="w-12 h-12 mx-auto" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"/>
                </svg>
              </div>
              <p class="text-primary/60">未達成の投稿がありません</p>
              <%= link_to "新しい投稿を作成する", new_post_path, class: "inline-block mt-4 px-4 py-2 bg-accent text-white rounded-xl text-sm font-medium hover:bg-accent/90 transition-colors" %>
            </div>
          <% end %>
        </div>

        <%# 達成カレンダー %>
        <div class="p-4 hidden" data-tabs-target="panel" data-panel-index="2">
          <%= render "achievement_calendar" %>
        </div>
      </div>

    <% else %>
      <%# 他ユーザーのページ: タブセクション（達成済み/みただけ？/達成カレンダー） %>
      <div class="mt-6 bg-white rounded-2xl border border-accent/20 shadow-sm overflow-hidden" data-controller="tabs">
        <%# タブヘッダー %>
        <div class="border-b border-accent/10">
          <div class="flex">
            <button type="button"
                    class="mypage-tab flex-1 px-4 py-3 text-sm font-medium transition-colors cursor-pointer"
                    data-tabs-target="tab"
                    data-action="click->tabs#switch"
                    data-tab-index="0">
              達成済み
            </button>
            <button type="button"
                    class="mypage-tab flex-1 px-4 py-3 text-sm font-medium transition-colors cursor-pointer"
                    data-tabs-target="tab"
                    data-action="click->tabs#switch"
                    data-tab-index="1">
              みただけ？
            </button>
            <button type="button"
                    class="mypage-tab flex-1 px-4 py-3 text-sm font-medium transition-colors cursor-pointer"
                    data-tabs-target="tab"
                    data-action="click->tabs#switch"
                    data-tab-index="2">
              達成カレンダー
            </button>
          </div>
        </div>

        <%# タブコンテンツ %>
        <%# 達成済み %>
        <div class="p-4" data-tabs-target="panel" data-panel-index="0">
          <% if @achieved_posts.any? %>
            <div class="space-y-4">
              <% @achieved_posts.each do |post| %>
                <%= render 'posts/post_card', post: post %>
              <% end %>
            </div>
          <% else %>
            <div class="py-12 text-center">
              <div class="text-primary/40 mb-4">
                <svg class="w-12 h-12 mx-auto" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                </svg>
              </div>
              <p class="text-primary/60">達成済みの投稿がありません</p>
            </div>
          <% end %>
        </div>

        <%# みただけ？ %>
        <div class="p-4 hidden" data-tabs-target="panel" data-panel-index="1">
          <% if @unachieved_posts.any? %>
            <div class="space-y-4">
              <% @unachieved_posts.each do |post| %>
                <%= render 'posts/post_card', post: post %>
              <% end %>
            </div>
          <% else %>
            <div class="py-12 text-center">
              <div class="text-primary/40 mb-4">
                <svg class="w-12 h-12 mx-auto" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"/>
                </svg>
              </div>
              <p class="text-primary/60">未達成の投稿がありません</p>
            </div>
          <% end %>
        </div>

        <%# 達成カレンダー %>
        <div class="p-4 hidden" data-tabs-target="panel" data-panel-index="2">
          <%= render "achievement_calendar" %>
        </div>
      </div>
    <% end %>

  </div>
</div>
