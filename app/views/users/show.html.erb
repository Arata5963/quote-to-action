<%# app/views/users/show.html.erb %>
<% content_for :title, @is_own_page ? "マイページ" : "#{@user.name}のプロフィール" %>

<div class="min-h-screen bg-white">
  <div class="max-w-4xl mx-auto px-8 md:px-12 py-10">

    <%# プロフィール表示（Notion風ミニマル） %>
    <div class="flex items-center gap-4 mb-8">
      <div class="flex-shrink-0">
        <% if @user.avatar.present? %>
          <%= image_tag @user.avatar.url, alt: "プロフィール画像",
                class: "h-16 w-16 rounded-full object-cover" %>
        <% else %>
          <div class="h-16 w-16 bg-gray-100 rounded-full flex items-center justify-center">
            <svg class="h-8 w-8 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
            </svg>
          </div>
        <% end %>
      </div>
      <div class="flex-1 min-w-0">
        <h1 class="text-2xl font-bold text-gray-900 truncate"><%= @user.name.presence || "名無しさん" %></h1>
        <% if @user.favorite_quote.present? %>
          <p class="text-gray-500 text-sm mt-1">「<%= @user.favorite_quote %>」</p>
        <% elsif @is_own_page %>
          <%= link_to edit_profile_path, class: "text-gray-400 text-sm hover:text-gray-600 transition-colors" do %>
            + ひとこと自己紹介を追加
          <% end %>
        <% end %>
      </div>
      <% if @is_own_page %>
        <%= link_to edit_profile_path, class: "text-gray-400 hover:text-gray-600 transition-colors p-2" do %>
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125" />
          </svg>
        <% end %>
      <% end %>
    </div>

    <% if @is_own_page %>
      <%# ===== タブ: 投稿 | タスク | 統計（Notion風） ===== %>
      <div data-controller="tabs">
        <%# タブヘッダー（ミニマルなアンダーライン） %>
        <div class="flex gap-6 border-b border-gray-200 mb-6">
          <button type="button"
                  class="notion-tab pb-3 text-sm font-medium transition-colors cursor-pointer"
                  data-tabs-target="tab"
                  data-action="click->tabs#switch"
                  data-tab-index="0">
            投稿
          </button>
          <button type="button"
                  class="notion-tab pb-3 text-sm font-medium transition-colors cursor-pointer"
                  data-tabs-target="tab"
                  data-action="click->tabs#switch"
                  data-tab-index="1">
            タスク
          </button>
          <button type="button"
                  class="notion-tab pb-3 text-sm font-medium transition-colors cursor-pointer"
                  data-tabs-target="tab"
                  data-action="click->tabs#switch"
                  data-tab-index="2">
            統計
          </button>
        </div>

        <%# ===== 投稿タブ ===== %>
        <div data-tabs-target="panel" data-panel-index="0">
          <% all_posts = @unachieved_posts + @achieved_posts %>

          <% if all_posts.empty? %>
            <%# 空状態 %>
            <div class="py-12 text-center">
              <div class="text-primary/40 mb-4">
                <svg class="w-12 h-12 mx-auto" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-7 14c-3.31 0-6-2.69-6-6s2.69-6 6-6 6 2.69 6 6-2.69 6-6 6zm3-6l-4 3V8l4 3z"/>
                </svg>
              </div>
              <p class="text-primary/60 mb-4">まだ投稿がありません</p>
              <%= link_to new_post_path, class: "inline-flex items-center gap-2 px-5 py-2.5 bg-accent text-white rounded-xl text-sm font-medium hover:bg-accent/90 transition-colors" do %>
                <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/>
                </svg>
                最初の投稿を作成
              <% end %>
            </div>
          <% else %>
            <%# 投稿グリッド（時系列） %>
            <div class="grid gap-4" style="grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));">
              <% all_posts.each do |post| %>
                <%= render 'posts/post_card_note', post: post %>
              <% end %>
            </div>

            <%# もっと見るリンク %>
            <% if all_posts.size >= 20 %>
              <div class="mt-6 text-center">
                <%= link_to posts_path(user_id: @user.id), class: "text-sm text-gray-500 hover:text-gray-900 transition-colors" do %>
                  すべての投稿を見る →
                <% end %>
              </div>
            <% end %>
          <% end %>
        </div>

        <%# ===== タスクタブ ===== %>
        <div class="hidden" data-tabs-target="panel" data-panel-index="1">
          <% has_any_task = @todays_tasks.any? || @overdue_tasks.any? || @upcoming_tasks.any? || @completed_tasks.any? %>

          <% if has_any_task %>
            <div class="space-y-8">
              <%# 🔥 今日のタスク %>
              <% if @todays_tasks.any? %>
                <%= render 'users/task_section',
                      icon: '🔥',
                      title: '今日',
                      title_class: 'text-gray-700',
                      tasks: @todays_tasks %>
              <% end %>

              <%# ⚠️ 期限切れ %>
              <% if @overdue_tasks.any? %>
                <%= render 'users/task_section',
                      icon: '⚠️',
                      title: '期限切れ',
                      title_class: 'text-red-600',
                      count_class: 'text-red-400',
                      tasks: @overdue_tasks %>
              <% end %>

              <%# 📅 今後のタスク %>
              <% if @upcoming_tasks.any? %>
                <%= render 'users/task_section',
                      icon: '📅',
                      title: '今後',
                      title_class: 'text-gray-700',
                      tasks: @upcoming_tasks %>
              <% end %>

              <%# ✅ 達成済み %>
              <% if @completed_tasks.any? %>
                <%= render 'users/task_section',
                      icon: '✅',
                      title: '達成済み',
                      title_class: 'text-gray-500',
                      tasks: @completed_tasks %>
              <% end %>
            </div>
          <% else %>
            <%# 空状態 %>
            <div class="py-12 text-center">
              <div class="text-gray-300 mb-4">
                <svg class="w-12 h-12 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <p class="text-gray-500 mb-4">タスクがありません</p>
              <p class="text-sm text-gray-400 mb-6">動画を見てアクションを設定しましょう</p>
              <%= link_to new_post_path, class: "inline-flex items-center gap-2 px-5 py-2.5 bg-accent text-white rounded-xl text-sm font-medium hover:bg-accent/90 transition-colors" do %>
                <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/>
                </svg>
                投稿を作成
              <% end %>
            </div>
          <% end %>
        </div>

        <%# ===== 統計タブ（Notion風ミニマル） ===== %>
        <div class="hidden" data-tabs-target="panel" data-panel-index="2">
          <%# 活動サマリー %>
          <div class="grid grid-cols-3 gap-8 mb-10">
            <div class="text-center">
              <div class="text-3xl font-bold text-gray-900"><%= @streak %></div>
              <div class="text-sm text-gray-500 mt-1">連続日数</div>
            </div>
            <div class="text-center">
              <div class="text-3xl font-bold text-gray-900"><%= @total_entries %></div>
              <div class="text-sm text-gray-500 mt-1">総アウトプット</div>
            </div>
            <div class="text-center">
              <div class="text-3xl font-bold text-gray-900"><%= @total_achievements %></div>
              <div class="text-sm text-gray-500 mt-1">達成数</div>
            </div>
          </div>

          <%# 活動グラフ（草） %>
          <div class="mb-10">
            <h3 class="text-sm font-medium text-gray-500 mb-4">過去30日間の活動</h3>
            <div class="flex flex-wrap gap-1" data-controller="activity-grass" data-activity-grass-data-value="<%= @activity_data.to_json %>">
              <% 30.downto(0) do |days_ago| %>
                <% date = Date.current - days_ago.days %>
                <% count = @activity_data[date.to_s] || 0 %>
                <% intensity = count == 0 ? 0 : [1, [count, 4].min].max %>
                <div class="w-3 h-3 rounded-sm <%=
                  case intensity
                  when 0 then 'bg-gray-100'
                  when 1 then 'bg-green-200'
                  when 2 then 'bg-green-300'
                  when 3 then 'bg-green-400'
                  else 'bg-green-500'
                  end
                %>" title="<%= l(date, format: :short) %>: <%= count %>件"></div>
              <% end %>
            </div>
            <div class="flex items-center justify-end gap-1 mt-2 text-xs text-gray-400">
              <span>少</span>
              <div class="w-3 h-3 rounded-sm bg-gray-100"></div>
              <div class="w-3 h-3 rounded-sm bg-green-200"></div>
              <div class="w-3 h-3 rounded-sm bg-green-300"></div>
              <div class="w-3 h-3 rounded-sm bg-green-400"></div>
              <div class="w-3 h-3 rounded-sm bg-green-500"></div>
              <span>多</span>
            </div>
          </div>

          <%# アウトプット内訳 %>
          <div class="mb-10">
            <h3 class="text-sm font-medium text-gray-500 mb-4">アウトプット内訳</h3>
            <div class="flex items-center gap-6">
              <div class="w-20 h-20 flex-shrink-0" data-controller="donut-chart"
                   data-donut-chart-values-value="<%= [@entry_stats[:memo], @entry_stats[:quote], @entry_stats[:action], @entry_stats[:blog]].to_json %>"
                   data-donut-chart-labels-value='["メモ", "引用", "アクション", "ブログ"]'
                   data-donut-chart-colors-value='["#60a5fa", "#a78bfa", "#f97316", "#10b981"]'>
                <canvas></canvas>
              </div>
              <div class="flex-1 grid grid-cols-2 gap-3 text-sm">
                <div class="flex items-center gap-2">
                  <span class="w-2.5 h-2.5 rounded-full bg-blue-400"></span>
                  <span class="text-gray-600">メモ</span>
                  <span class="font-medium text-gray-900 ml-auto"><%= @entry_stats[:memo] %></span>
                </div>
                <div class="flex items-center gap-2">
                  <span class="w-2.5 h-2.5 rounded-full bg-violet-400"></span>
                  <span class="text-gray-600">引用</span>
                  <span class="font-medium text-gray-900 ml-auto"><%= @entry_stats[:quote] %></span>
                </div>
                <div class="flex items-center gap-2">
                  <span class="w-2.5 h-2.5 rounded-full bg-orange-500"></span>
                  <span class="text-gray-600">アクション</span>
                  <span class="font-medium text-gray-900 ml-auto"><%= @entry_stats[:action] %></span>
                </div>
                <div class="flex items-center gap-2">
                  <span class="w-2.5 h-2.5 rounded-full bg-emerald-500"></span>
                  <span class="text-gray-600">ブログ</span>
                  <span class="font-medium text-gray-900 ml-auto"><%= @entry_stats[:blog] %></span>
                </div>
              </div>
            </div>
          </div>

          <%# 達成カレンダー %>
          <div class="mb-10">
            <h3 class="text-sm font-medium text-gray-500 mb-4">達成カレンダー</h3>
            <%= render "achievement_calendar" %>
          </div>

          <%# お気に入り動画 %>
          <div class="mb-10">
            <h3 class="text-sm font-medium text-gray-500 mb-4">お気に入り動画</h3>
            <% if @favorite_videos.any? %>
              <%= render "favorite_videos_slider", videos: @favorite_videos %>
            <% else %>
              <p class="text-gray-400 text-sm">
                <%= link_to "+ お気に入り動画を登録", edit_profile_path, class: "hover:text-gray-600 transition-colors" %>
              </p>
            <% end %>
          </div>

          <%# クイックリンク %>
          <div class="flex gap-4 pt-6 border-t border-gray-100">
            <%= link_to stats_path, class: "text-sm text-gray-500 hover:text-gray-900 transition-colors" do %>
              詳細な統計・分析 →
            <% end %>
            <%= link_to bookshelf_path, class: "text-sm text-gray-500 hover:text-gray-900 transition-colors" do %>
              本棚 →
            <% end %>
          </div>
        </div>
      </div>

    <% else %>
      <%# 他ユーザーのページ: タブセクション %>
      <div class="mt-6 bg-white rounded-2xl border border-accent/20 shadow-sm overflow-hidden" data-controller="tabs">
        <%# タブヘッダー %>
        <div class="border-b border-accent/10">
          <div class="flex">
            <button type="button"
                    class="mypage-tab flex-1 px-4 py-3 text-sm font-medium transition-colors cursor-pointer"
                    data-tabs-target="tab"
                    data-action="click->tabs#switch"
                    data-tab-index="0">
              投稿
            </button>
            <button type="button"
                    class="mypage-tab flex-1 px-4 py-3 text-sm font-medium transition-colors cursor-pointer"
                    data-tabs-target="tab"
                    data-action="click->tabs#switch"
                    data-tab-index="1">
              達成カレンダー
            </button>
            <button type="button"
                    class="mypage-tab flex-1 px-4 py-3 text-sm font-medium transition-colors cursor-pointer"
                    data-tabs-target="tab"
                    data-action="click->tabs#switch"
                    data-tab-index="2">
              お気に入り動画
            </button>
          </div>
        </div>

        <%# タブコンテンツ %>
        <%# 投稿 %>
        <div class="p-4" data-tabs-target="panel" data-panel-index="0">
          <% all_posts = @unachieved_posts + @achieved_posts %>
          <% if all_posts.any? %>
            <div class="grid gap-3" style="grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));">
              <% all_posts.each do |post| %>
                <%= render 'posts/post_card_note', post: post %>
              <% end %>
            </div>
          <% else %>
            <div class="py-12 text-center">
              <div class="text-primary/40 mb-4">
                <svg class="w-12 h-12 mx-auto" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-7 14c-3.31 0-6-2.69-6-6s2.69-6 6-6 6 2.69 6 6-2.69 6-6 6zm3-6l-4 3V8l4 3z"/>
                </svg>
              </div>
              <p class="text-primary/60">まだ投稿がありません</p>
            </div>
          <% end %>
        </div>

        <%# 達成カレンダー %>
        <div class="p-4 hidden" data-tabs-target="panel" data-panel-index="1">
          <%= render "achievement_calendar" %>
        </div>

        <%# お気に入り動画 %>
        <div class="p-4 hidden" data-tabs-target="panel" data-panel-index="2">
          <% if @favorite_videos.any? %>
            <%= render "favorite_videos_slider", videos: @favorite_videos %>
          <% else %>
            <div class="py-12 text-center">
              <div class="text-primary/40 mb-4">
                <svg class="w-12 h-12 mx-auto" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-7 14c-3.31 0-6-2.69-6-6s2.69-6 6-6 6 2.69 6 6-2.69 6-6 6zm3-6l-4 3V8l4 3z"/>
                </svg>
              </div>
              <p class="text-primary/60">お気に入り動画が登録されていません</p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

  </div>
</div>
