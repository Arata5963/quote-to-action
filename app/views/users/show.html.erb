<%# app/views/users/show.html.erb %>
<%# マイページ - ユーザーの投稿・達成状況の一覧表示 %>
<% content_for :title, "マイページ" %>

<div class="max-w-4xl mx-auto px-4 py-8 space-y-6">
  
  <%# ユーザー情報・統計サマリー %>
  <div class="bg-white border rounded-lg p-6">
    <h1 class="text-2xl font-bold text-gray-900 mb-4">マイページ</h1>
    <p class="text-gray-600 mb-6"><%= @user.email %></p>
    
    <%# 統計情報をカード形式で表示 %>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <%# 総投稿数 %>
      <div class="bg-blue-50 rounded-lg p-4 text-center">
        <div class="text-sm text-blue-600">総投稿数</div>
        <div class="text-2xl font-bold text-blue-700"><%= @total_posts %> 件</div>
      </div>
      
      <%# 累計達成回数 %>
      <div class="bg-emerald-50 rounded-lg p-4 text-center">
        <div class="text-sm text-emerald-600">累計達成回数</div>
        <div class="text-2xl font-bold text-emerald-700"><%= @total_achievements %> 回</div>
      </div>
      
      <%# 今日の達成数 %>
      <div class="bg-amber-50 rounded-lg p-4 text-center">
        <div class="text-sm text-amber-600">今日の達成</div>
        <div class="text-2xl font-bold text-amber-700"><%= @today_achievements %> 回</div>
      </div>
    </div>
  </div>

  <%# 投稿一覧セクション %>
  <% if @posts.empty? %>
    <div class="text-center py-12">
      <div class="text-gray-500 text-lg mb-4">まだ投稿がありません</div>
      <%= link_to "最初のきっかけを投稿してみましょう", new_post_path,
            class: "bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-md transition-colors" %>
    </div>
  <% else %>
    <%# 投稿一覧タブ風メニュー %>
    <div class="flex overflow-x-auto overflow-y-hidden border-b border-gray-200 whitespace-nowrap">
      <button class="inline-flex items-center h-10 px-4 -mb-px text-sm text-center 
                    text-blue-600 bg-transparent border-b-2 border-blue-500 
                    sm:text-base whitespace-nowrap focus:outline-none">
        Profile
      </button>

      <button class="inline-flex items-center h-10 px-4 -mb-px text-sm text-center 
                    text-gray-500 bg-transparent border-b-2 border-transparent 
                    sm:text-base whitespace-nowrap cursor-pointer 
                    focus:outline-none hover:border-gray-400">
        Account
      </button>

      <button class="inline-flex items-center h-10 px-4 -mb-px text-sm text-center 
                    text-gray-500 bg-transparent border-b-2 border-transparent 
                    sm:text-base whitespace-nowrap cursor-pointer 
                    focus:outline-none hover:border-gray-400">
        Notification
      </button>
    </div>

    <%# 投稿一覧表示（左：画像／右：テキスト） %>
    <div class="grid grid-cols-1 gap-4 md:gap-6">
      <% @posts.each do |post| %>
        <%= link_to post, class: "block bg-white border rounded-lg hover:shadow-md transition" do %>
          <div class="flex flex-col sm:flex-row">
            
            <%# 🆕 左：画像表示ロジック %>
            <div class="sm:w-48 sm:flex-shrink-0">
              <% if post.image.present? %>
                <%# アップロードされた画像を表示 %>
                <img
                  alt="投稿画像"
                  src="<%= post.image.url %>"
                  class="h-48 w-full sm:h-full sm:w-48 object-cover rounded-t-lg sm:rounded-l-lg sm:rounded-tr-none"
                />
              <% else %>
                <%# 画像がない場合はグラデーション背景 %>
                <div class="h-48 w-full sm:h-full sm:w-48 bg-gradient-to-br from-blue-600 via-purple-600 to-pink-600 rounded-t-lg sm:rounded-l-lg sm:rounded-tr-none flex items-center justify-center">
                  <div class="text-center text-white">
                    <svg class="mx-auto h-8 w-8 mb-1 opacity-70" fill="none" stroke="currentColor" viewBox="0 0 48 48">
                      <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                    <p class="text-xs opacity-70">画像なし</p>
                  </div>
                </div>
              <% end %>
            </div>

            <%# 右：本文 %>
            <div class="flex-1 p-4 sm:p-6">
              <%# 達成回数 %>
              <div class="mb-2 text-xs text-pink-600 font-semibold">
                達成 <%= post.achievements.where(user_id: current_user.id).count %> 回
              </div>

              <%# アクションプラン %>
              <div class="mb-3">
                <div class="text-xs text-gray-500">アクションプラン</div>
                <h3 class="text-lg font-bold text-gray-900 leading-snug">
                  <%= post.action_plan %>
                </h3>
              </div>

              <%# きっかけ %>
              <div>
                <div class="text-xs text-gray-500">きっかけ</div>
                <p class="text-sm text-gray-700 leading-relaxed whitespace-pre-line">
                  <%= post.trigger_content.truncate(100) %>
                </p>
              </div>
            </div>

          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>