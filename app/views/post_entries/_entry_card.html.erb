<%# app/views/post_entries/_entry_card.html.erb %>
<%# アクションプランカード（吹き出しデザイン） %>

<div id="<%= dom_id(entry) %>" class="flex gap-3 <%= 'opacity-75' if entry.achieved? %>">
  <%# 左: アバター %>
  <div class="flex-shrink-0">
    <% if entry.display_anonymous? %>
      <div class="w-10 h-10 rounded-full bg-gray-200 flex items-center justify-center">
        <svg class="w-5 h-5 text-gray-400" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
        </svg>
      </div>
    <% elsif entry.display_avatar.present? %>
      <%= image_tag entry.display_avatar.url,
            alt: entry.display_user_name,
            class: "w-10 h-10 rounded-full object-cover border border-gray-100" %>
    <% else %>
      <div class="w-10 h-10 rounded-full bg-gradient-to-br from-orange-400 to-orange-500 flex items-center justify-center text-white font-medium text-sm">
        <%= entry.display_user_name&.first&.upcase || '?' %>
      </div>
    <% end %>
  </div>

  <%# 右: 吹き出し %>
  <div class="flex-1 min-w-0">
    <%# ユーザー名と時間 %>
    <div class="flex items-center gap-2 mb-1">
      <span class="text-sm font-medium text-gray-900">
        <%= entry.display_anonymous? ? '匿名' : entry.display_user_name %>
      </span>
      <span class="text-xs text-gray-400"><%= time_ago_in_words(entry.created_at) %>前</span>
      <% if entry.achieved? %>
        <span class="inline-flex items-center gap-1 text-xs text-green-600 font-medium">
          <svg class="w-3 h-3" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          達成!
        </span>
      <% end %>
    </div>

    <%# 吹き出し本体 %>
    <div class="relative">
      <%# 吹き出しの三角形 %>
      <div class="absolute -left-2 top-3 w-0 h-0 border-t-[6px] border-t-transparent border-b-[6px] border-b-transparent <%= entry.achieved? ? 'border-r-[8px] border-r-green-50' : 'border-r-[8px] border-r-orange-50' %>"></div>

      <%# 吹き出し本体 %>
      <div class="relative rounded-2xl rounded-tl-sm p-4 <%= entry.achieved? ? 'bg-green-50 border border-green-100' : 'bg-orange-50 border border-orange-100' %>">
        <%# コンテンツ %>
        <p class="text-[15px] leading-relaxed <%= entry.achieved? ? 'text-green-800 line-through decoration-green-400' : 'text-gray-800' %> whitespace-pre-line">
          <%= entry.content %>
        </p>

        <%# フッター: 期日 + アクション %>
        <div class="flex items-center justify-between mt-3 pt-3 border-t <%= entry.achieved? ? 'border-green-100' : 'border-orange-100' %>">
          <%# 期日 %>
          <div class="flex items-center gap-2">
            <% if entry.deadline.present? %>
              <% if entry.achieved? %>
                <span class="inline-flex items-center gap-1 text-xs text-green-600">
                  <svg class="w-3.5 h-3.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  期日: <%= l(entry.deadline, format: :short) %>
                </span>
              <% elsif entry.deadline < Date.current %>
                <span class="inline-flex items-center gap-1 text-xs text-red-500 font-medium">
                  <svg class="w-3.5 h-3.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  <%= l(entry.deadline, format: :short) %> (超過)
                </span>
              <% elsif entry.deadline <= Date.current + 3.days %>
                <span class="inline-flex items-center gap-1 text-xs text-orange-600 font-medium">
                  <svg class="w-3.5 h-3.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  あと<%= (entry.deadline - Date.current).to_i %>日
                </span>
              <% else %>
                <span class="inline-flex items-center gap-1 text-xs text-gray-500">
                  <svg class="w-3.5 h-3.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                  </svg>
                  <%= l(entry.deadline, format: :short) %>
                </span>
              <% end %>
            <% else %>
              <span class="text-xs text-gray-400">期日なし</span>
            <% end %>
          </div>

          <%# アクションボタン %>
          <div class="flex items-center gap-2">
            <% if user_signed_in? && entry.user == current_user %>
              <% if entry.achieved? %>
                <%= button_to achieve_post_post_entry_path(entry.post, entry),
                      method: :patch,
                      class: "inline-flex items-center gap-1 px-3 py-1.5 text-xs font-medium text-green-700 bg-green-100 hover:bg-green-200 rounded-full transition-colors cursor-pointer",
                      title: "未達成に戻す" do %>
                  <svg class="w-3.5 h-3.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
                  </svg>
                  取り消す
                <% end %>
              <% else %>
                <%= button_to achieve_post_post_entry_path(entry.post, entry),
                      method: :patch,
                      class: "inline-flex items-center gap-1 px-3 py-1.5 text-xs font-medium text-white bg-green-500 hover:bg-green-600 rounded-full transition-colors cursor-pointer shadow-sm",
                      title: "達成にする" do %>
                  <svg class="w-3.5 h-3.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
                  </svg>
                  達成!
                <% end %>
              <% end %>

              <%# 削除ボタン %>
              <%= button_to post_post_entry_path(entry.post, entry),
                    method: :delete,
                    data: { turbo_confirm: "このアクションプランを削除しますか？" },
                    class: "p-1.5 text-gray-400 hover:text-red-500 hover:bg-red-50 rounded-full transition-colors",
                    title: "削除" do %>
                <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                </svg>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
