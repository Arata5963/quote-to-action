<%# app/views/post_entries/show.html.erb %>
<%# ブログ記事表示ページ %>
<% content_for :title, @entry.title %>

<div class="min-h-screen bg-white">
  <div style="max-width: 720px; margin: 0 auto; padding: 0 20px;">

    <%# ヘッダー %>
    <div class="py-4 flex items-center justify-between">
      <%= link_to @post, class: "inline-flex items-center gap-1 text-sm text-gray-400 hover:text-gray-600 transition-colors" do %>
        <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"/>
        </svg>
        <span>動画に戻る</span>
      <% end %>

      <% if user_signed_in? && @post.user == current_user %>
        <div class="flex items-center gap-3">
          <% if @entry.draft? %>
            <span class="blog-draft-badge">下書き</span>
          <% end %>
          <%= link_to "編集", edit_post_post_entry_path(@post, @entry), class: "text-sm text-gray-500 hover:text-gray-700" %>
          <% if @entry.published? %>
            <%= button_to "非公開にする", unpublish_post_post_entry_path(@post, @entry), method: :patch, class: "text-sm text-gray-500 hover:text-orange-500", data: { turbo_confirm: "下書きに戻しますか？" } %>
          <% else %>
            <%= button_to "公開する", publish_post_post_entry_path(@post, @entry), method: :patch, class: "text-sm text-white bg-[#8B7355] px-3 py-1 rounded-md hover:bg-[#7a6349]" %>
          <% end %>
        </div>
      <% end %>
    </div>

    <%# 元動画のリンク %>
    <%= link_to @post, class: "flex items-center gap-3 p-3 bg-gray-50 rounded-lg mb-8 hover:bg-gray-100 transition-colors" do %>
      <div class="w-16 h-9 flex-shrink-0 rounded overflow-hidden bg-gray-200">
        <%= image_tag @post.youtube_thumbnail_url(size: :mqdefault),
              class: "w-full h-full object-cover",
              loading: "lazy" %>
      </div>
      <div class="flex-1 min-w-0">
        <p class="text-xs text-gray-500 mb-0.5">このブログの元動画</p>
        <p class="text-sm text-gray-800 truncate"><%= @post.youtube_title %></p>
      </div>
      <svg class="w-4 h-4 text-gray-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/>
      </svg>
    <% end %>

    <%# タイトル %>
    <h1 style="font-size: 32px; font-weight: 700; color: #1a1a1a; line-height: 1.4; margin-bottom: 16px;">
      <%= @entry.title %>
    </h1>

    <%# メタ情報 %>
    <div class="flex items-center gap-4 mb-8 pb-8 border-b border-gray-100">
      <%= link_to user_profile_path(@post.user), class: "flex items-center gap-2" do %>
        <% if @post.user.avatar.present? %>
          <%= image_tag @post.user.avatar.url, class: "w-8 h-8 rounded-full object-cover" %>
        <% else %>
          <div class="w-8 h-8 rounded-full bg-gray-100 flex items-center justify-center">
            <svg class="w-4 h-4 text-gray-400" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
            </svg>
          </div>
        <% end %>
        <span class="text-sm font-medium text-gray-800"><%= display_name(@post.user) %></span>
      <% end %>
      <span class="text-sm text-gray-400">
        <% if @entry.published? %>
          <%= l(@entry.published_at, format: :long) %> 公開
        <% else %>
          <%= l(@entry.updated_at, format: :long) %> 更新
        <% end %>
      </span>
    </div>

    <%# 本文（Markdown） %>
    <article class="blog-preview" style="border: none; padding: 0; min-height: auto;">
      <%= raw(markdown_to_html(@entry.content)) %>
    </article>

    <%# 下部余白 %>
    <div style="height: 120px;"></div>
  </div>
</div>
