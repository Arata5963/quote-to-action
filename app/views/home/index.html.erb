<%# app/views/home/index.html.erb %>
<% content_for :title, "YouTube動画から学びを行動に" %>

<div class="min-h-screen bg-cream flex items-center justify-center px-4 py-16">
  <div class="max-w-4xl mx-auto text-center">

    <%# ?アイコン（ファビコン画像を使用） %>
    <div class="w-24 h-24 flex items-center justify-center mx-auto mb-8
                transition-all duration-500 hover:scale-110 hover:rotate-6
                animate-fade-in">
      <%= image_tag "/apple-touch-icon.png", alt: "mitadake?", class: "w-24 h-24 rounded-3xl" %>
    </div>

    <%# メインコピー %>
    <h1 class="text-4xl lg:text-6xl font-bold text-primary mb-6 animate-slide-up">
      動画を「みただけ？」で終わらせない
    </h1>

    <%# サブコピー %>
    <p class="text-lg lg:text-xl text-primary/70 mb-12 max-w-2xl mx-auto animate-fade-in"
       style="animation-delay: 200ms;">
      YouTube動画から学んだことを行動に変える
    </p>

    <%# CTAボタン %>
    <div class="flex flex-col sm:flex-row gap-4 justify-center animate-fade-in"
         style="animation-delay: 400ms;">
      <%= link_to "投稿を見る", posts_path,
            class: "px-8 py-4 rounded-2xl border-2 border-accent text-accent bg-white font-medium text-lg transition-all duration-300 hover:bg-accent/10 hover:scale-105 text-center" %>

      <%= link_to "無料で始める", new_user_registration_path,
            class: "px-8 py-4 rounded-2xl bg-accent text-white font-bold text-lg transition-all duration-300 hover:bg-accent/90 hover:scale-105 hover:shadow-xl text-center" %>
    </div>

  </div>
</div>
