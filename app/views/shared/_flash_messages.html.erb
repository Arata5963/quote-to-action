<%# app/views/shared/_flash_messages.html.erb %>
<div id="flash-messages" class="fixed top-20 right-4 z-50 space-y-2 max-w-sm">
  <% flash.each do |type, message| %>
    <%
      # タイプに応じたスタイル
      styles = case type.to_s
      when 'notice', 'success'
        'bg-success-50 border-success-500 text-success-700'
      when 'alert', 'error'
        'bg-danger-50 border-danger-500 text-danger-700'
      else
        'bg-primary-50 border-primary-500 text-primary-700'
      end
    %>
    <div class="<%= styles %> border-l-4 rounded-r-lg px-4 py-3 shadow-lg animate-fade-in"
         data-controller="flash"
         data-flash-remove-after-value="5000">
      <div class="flex items-start gap-3">
        <div class="flex-shrink-0">
          <% if type.to_s == 'notice' || type.to_s == 'success' %>
            <svg class="h-5 w-5 text-success-500" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
          <% else %>
            <svg class="h-5 w-5 text-danger-500" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          <% end %>
        </div>
        <p class="text-sm font-medium flex-1"><%= message %></p>
        <button type="button"
                data-action="click->flash#remove"
                class="flex-shrink-0 opacity-50 hover:opacity-100 transition-opacity">
          <svg class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </button>
      </div>
    </div>
  <% end %>
</div>
