<%# app/views/shared/_bottom_nav.html.erb %>
<%# ボトムナビゲーション（全画面幅で表示） %>

<% if user_signed_in? %>
  <nav class="fixed bottom-0 left-0 right-0 z-50 bg-white border-t border-accent/20">
    <div class="max-w-6xl mx-auto flex items-center justify-around h-16">

      <%# ホーム %>
      <%= link_to posts_path,
            class: "flex flex-col items-center justify-center flex-1 h-full #{current_page?(posts_path) ? 'text-accent' : 'text-primary/60'} transition-colors" do %>
        <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
          <path d="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z"/>
        </svg>
        <span class="text-xs mt-1">ホーム</span>
      <% end %>

      <%# 投稿 %>
      <%= link_to new_post_path,
            class: "flex flex-col items-center justify-center flex-1 h-full #{current_page?(new_post_path) ? 'text-accent' : 'text-primary/60'} transition-colors" do %>
        <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
          <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
        </svg>
        <span class="text-xs mt-1">投稿</span>
      <% end %>

      <%# マイページ %>
      <%= link_to mypage_path,
            class: "flex flex-col items-center justify-center flex-1 h-full #{current_page?(mypage_path) ? 'text-accent' : 'text-primary/60'} transition-colors" do %>
        <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
        </svg>
        <span class="text-xs mt-1">マイページ</span>
      <% end %>

    </div>
  </nav>
<% end %>
