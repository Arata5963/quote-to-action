<%# app/views/shared/_header.html.erb %>
<header class="bg-white border-b border-accent/20 sticky top-0 z-40">
  <div class="mx-auto max-w-screen-xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">

      <%# 左側：ロゴ %>
      <div class="flex items-center">
        <%= link_to home_path, class: "flex items-center gap-2 text-primary hover:text-accent transition-colors" do %>
          <%= image_tag "/favicon-32x32.png", alt: "mitadake?", class: "w-8 h-8 rounded-lg" %>
          <span class="text-xl font-bold tracking-tight">mitadake?</span>
        <% end %>
      </div>

      <%# 右側：メニューボタン %>
      <div class="flex items-center gap-3" data-controller="sidebar">
        <button type="button"
                data-action="click->sidebar#open"
                class="p-2 text-primary/60 hover:text-primary hover:bg-accent/10 cursor-pointer rounded-lg transition-colors">
          <svg class="h-6 w-6" viewBox="0 0 24 24" fill="currentColor">
            <path d="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z"/>
          </svg>
        </button>

        <%# サイドバー %>
        <%= render "shared/sidebar" %>
      </div>
    </div>
  </div>
</header>
