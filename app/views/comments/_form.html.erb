<%# app/views/comments/_form.html.erb %>
<%# コメント入力欄（1行・あまピタ風） %>

<%= form_with(model: [@post, @post.comments.build], local: true) do |f| %>
  <div class="flex items-center gap-2">
    <%= f.text_field :content,
                    placeholder: "コメントを書く...",
                    class: "flex-1 border border-accent/20 rounded-full px-4 py-2.5 text-sm text-primary placeholder-primary/40 focus:border-accent focus:ring-2 focus:ring-accent/20 focus:outline-none transition-colors" %>
    <%= f.submit "送信",
          class: "bg-accent hover:bg-accent/90 text-white px-5 py-2.5 rounded-full text-sm font-medium transition-colors cursor-pointer" %>
  </div>
<% end %>
