<%# app/views/user_badges/index.html.erb %>
<% content_for :title, "マイバッジ" %>

<div class="max-w-4xl mx-auto px-4 py-8 bg-white min-h-screen">
  <div class="mb-8 text-center">
    <h1 class="text-3xl font-bold text-black mb-4">マイバッジ</h1>
    
    <%# 獲得数表示を追加 %>
    <div class="mb-6">
      <div class="inline-flex gap-8">
        <div class="text-center">
          <div class="text-2xl font-bold text-black"><%= @total_badges %></div>
          <div class="text-sm text-gray-600">獲得済み</div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-black"><%= @available_count %></div>
          <div class="text-sm text-gray-600">未獲得</div>
        </div>
      </div>
    </div>
  </div>

  <% if @user_badges.empty? %>
    <div class="text-center py-12">
      <div class="mb-6">
        <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
        <div class="text-black text-lg mb-6">まだバッジがありません</div>
      </div>
      <%= link_to posts_path, class: "inline-flex items-center gap-2 bg-black hover:bg-gray-800 text-white px-6 py-3 font-bold transition-colors border-2 border-black" do %>
        <span>達成してバッジを集めよう</span>
      <% end %>
    </div>
  <% else %>
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      <% @user_badges.each do |user_badge| %>
        <div class="bg-white border-2 border-black p-4 text-center hover:bg-gray-50 transition-colors">
          <%# 画像をSVGに変更 %>
          <div class="w-16 h-16 mx-auto mb-3 text-blue-600">
            <%= user_badge.badge_svg %>
          </div>
          <h3 class="font-bold text-black mb-1"><%= user_badge.badge_name %></h3>
          <p class="text-xs text-gray-600 mb-2"><%= user_badge.description %></p>
          <div class="text-xs text-gray-500">
            <%= user_badge.awarded_at.strftime("%Y.%m.%d") %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>