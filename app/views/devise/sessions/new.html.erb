<% content_for :title, "ログイン" %>

<main class="flex-1 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full bg-white border-2 border-black p-8">

    <div class="text-center mb-8">
      <h2 class="text-2xl font-bold text-black">ログイン</h2>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name),
          remote: false, html: { class: "space-y-6" }) do |f| %>

      <div>
        <%= f.label :email, "メールアドレス", class: "block text-sm font-bold text-black mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
              placeholder: "メールアドレスを入力",
              class: "w-full px-4 py-3 border-2 border-black text-black placeholder-gray-500 focus:outline-none focus:border-gray-600 transition-colors" %>
      </div>

      <div>
        <%= f.label :password, "パスワード", class: "block text-sm font-bold text-black mb-2" %>
        <%= f.password_field :password, autocomplete: "current-password",
              placeholder: "パスワードを入力",
              class: "w-full px-4 py-3 border-2 border-black text-black placeholder-gray-500 focus:outline-none focus:border-gray-600 transition-colors" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "w-4 h-4 border-2 border-black text-black focus:ring-black focus:ring-2" %>
          <%= f.label :remember_me, "ログイン状態を保持する", class: "ml-2 text-sm font-medium text-black" %>
        </div>
      <% end %>

      <div>
        <%= f.submit "ログイン",
              class: "w-full bg-black text-white py-3 px-4 font-bold hover:bg-gray-800 transition-colors border-2 border-black" %>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <%= link_to "パスワードを忘れた方はこちら", new_password_path(resource_name), 
            class: "text-black hover:text-gray-600 transition-colors font-medium underline" %>
    </div>

    <div class="mt-4 text-center">
      <span class="text-black">アカウントをお持ちでない方は </span>
      <%= link_to "新規登録", new_registration_path(resource_name),
            class: "text-black font-bold hover:text-gray-600 transition-colors underline" %>
    </div>
  </div>
</main>