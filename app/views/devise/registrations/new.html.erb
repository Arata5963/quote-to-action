<% content_for :title, "新規登録" %>

<main class="flex-1 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full bg-white border-2 border-black p-8">
    <div class="text-center mb-8">
      <h2 class="text-2xl font-bold text-black">新規登録</h2>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
          remote: false, html: { class: "space-y-6" }) do |f| %>

      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :email, "メールアドレス", class: "block text-sm font-bold text-black mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
              placeholder: "メールアドレスを入力",
              class: "w-full px-4 py-3 border-2 border-black text-black placeholder-gray-500 focus:outline-none focus:border-gray-600 transition-colors" %>
      </div>

      <div>
        <%= f.label :password, "パスワード", class: "block text-sm font-bold text-black mb-2" %>
        <%= f.password_field :password, autocomplete: "new-password",
              placeholder: "パスワードを入力",
              class: "w-full px-4 py-3 border-2 border-black text-black placeholder-gray-500 focus:outline-none focus:border-gray-600 transition-colors" %>
        <% if @minimum_password_length %>
          <p class="text-xs text-gray-600 mt-1"><%= @minimum_password_length %> 文字以上で入力してください</p>
        <% end %>
      </div>

      <div>
        <%= f.label :password_confirmation, "パスワード（確認用）", class: "block text-sm font-bold text-black mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
              placeholder: "パスワードを入力（確認用）",
              class: "w-full px-4 py-3 border-2 border-black text-black placeholder-gray-500 focus:outline-none focus:border-gray-600 transition-colors" %>
      </div>

      <div>
        <%= f.submit "登録",
              class: "w-full bg-black text-white py-3 px-4 font-bold hover:bg-gray-800 transition-colors border-2 border-black" %>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <span class="text-black">アカウントをお持ちの方は </span>
      <%= link_to "ログイン", new_session_path(resource_name),
            class: "text-black font-bold hover:text-gray-600 transition-colors underline" %>
    </div>
  </div>
</main>