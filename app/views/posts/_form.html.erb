<%# app/views/posts/_form.html.erb %>
<div class="max-w-2xl mx-auto px-4 py-8 bg-white min-h-screen">
  <div class="bg-white border-2 border-black p-6 lg:p-8">

    <%# フォームタイトル %>
    <div class="text-center mb-8">
      <div class="flex items-center justify-center gap-2 mb-4">
        <svg class="w-6 h-6 text-black fill-current" viewBox="0 0 24 24">
          <path d="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"/>
        </svg>
        <h1 class="text-2xl font-bold text-black">
          <%= post.persisted? ? "投稿を編集" : "新しい投稿を作成" %>
        </h1>
      </div>
      <div class="w-16 h-1 bg-black mx-auto"></div>
    </div>

    <%= form_with(model: post, local: true, html: { class: "space-y-8", multipart: true }) do |form| %>

      <%# きっかけ入力 %>
      <div class="border border-black p-4">
        <div class="flex items-center gap-2 mb-3">
          <svg class="w-5 h-5 text-black fill-current" viewBox="0 0 24 24">
            <path d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <%= form.label :trigger_content, "きっかけ", class: "text-sm font-bold text-black uppercase tracking-wide" %>
        </div>
        <%= form.text_area :trigger_content, rows: 4,
              placeholder: "どんなきっかけがありましたか？（例：本で読んだ言葉、動画で見た内容、会話で気づいたことなど）",
              class: "w-full px-3 py-2 border-2 border-black text-black placeholder-gray-500 focus:outline-none focus:border-gray-600 bg-white" %>
      </div>

      <%# アクションプラン入力 %>
      <div class="border border-black p-4">
        <div class="flex items-center gap-2 mb-3">
          <svg class="w-5 h-5 text-black fill-current" viewBox="0 0 24 24">
            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <%= form.label :action_plan, "アクションプラン", class: "text-sm font-bold text-black uppercase tracking-wide" %>
        </div>
        <%= form.text_area :action_plan, rows: 4,
              placeholder: "どんなアクションを起こしますか？（例：毎朝5分読書する、週1回散歩する、感謝の気持ちを伝えるなど）",
              class: "w-full px-3 py-2 border-2 border-black text-black placeholder-gray-500 focus:outline-none focus:border-gray-600 bg-white" %>
      </div>

      <%# 画像アップロード %>
      <div class="border border-black p-4">
        <div class="flex items-center gap-2 mb-3">
          <svg class="w-5 h-5 text-black fill-current" viewBox="0 0 24 24">
            <path d="M21 19V5c0-1.1-.9-2-2-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2zM8.5 13.5l2.5 3.01L14.5 12l4.5 6H5l3.5-4.5z"/>
          </svg>
          <%= form.label :image, "画像（任意）", class: "text-sm font-bold text-black uppercase tracking-wide" %>
        </div>

        <div class="border-2 border-dashed border-black p-6 bg-gray-50">
          <%= form.file_field :image, accept: "image/*",
                class: "w-full text-sm text-black file:mr-4 file:py-2 file:px-4 file:border-2 file:border-black file:text-black file:font-bold file:bg-white hover:file:bg-gray-100 file:cursor-pointer cursor-pointer" %>
          <div class="mt-2 flex items-center gap-1">
            <svg class="w-3 h-3 text-black fill-current" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-6h2v6zm0-8h-2V7h2v2z"/>
            </svg>
            <p class="text-xs text-black font-medium">PNG, JPG, GIF形式（最大10MB）</p>
          </div>
        </div>
      </div>

      <%# ▼ アイコン選択（JSなし・トグルで開閉） %>
      <div class="border border-black p-4">
        <details class="group" <%= 'open' if post.icon.present? %>>
          <summary class="flex items-center justify-between cursor-pointer list-none">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-black" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span class="text-sm font-bold text-black uppercase tracking-wide">アイコンを選ぶ（任意）</span>
            </div>
            <span class="text-xs font-bold border border-black px-2 py-0.5 bg-white">
              <span class="group-open:hidden">開く</span>
              <span class="hidden group-open:inline">閉じる</span>
            </span>
          </summary>

          <%# 選択肢グリッド %>
          <div class="mt-4 grid grid-cols-4 sm:grid-cols-6 md:grid-cols-8 gap-3">
            <% Post::HEROICONS.each do |key, v| %>
              <label class="relative group flex aspect-square items-center justify-center border-2 border-black bg-white hover:bg-gray-50 transition cursor-pointer">
                <%= form.radio_button :icon, key, class: "sr-only peer", checked: post.icon == key %>

                <svg class="w-7 h-7 text-black pointer-events-none peer-checked:scale-110 transition-transform"
                     viewBox="0 0 24 24" fill="none" stroke="currentColor"
                     stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <path d="<%= v[:outline] %>"/>
                </svg>

                <%# チェック状態の可視化 %>
                <span class="pointer-events-none absolute inset-0 opacity-0 peer-checked:opacity-100 ring-2 ring-black"></span>
                <span class="pointer-events-none absolute bottom-1 left-1 right-1 text-[10px] leading-tight text-center font-medium text-black truncate">
                  <%= v[:name] %>
                </span>
              </label>
            <% end %>
          </div>

          <%# クリア（アイコンなし） %>
          <div class="mt-4">
            <label class="inline-flex items-center gap-2 cursor-pointer">
              <%= form.radio_button :icon, "", class: "accent-black", checked: post.icon.blank? %>
              <span class="text-sm font-bold text-black">アイコンなしにする</span>
            </label>
          </div>
        </details>
      </div>
      <%# ▲ アイコン選択ここまで %>

      <%# 送信ボタン %>
      <div class="pt-4 relative">
        <%= form.submit post.persisted? ? "更新する" : "投稿する",
              class: "w-full bg-black hover:bg-gray-800 text-white py-3 px-6 font-bold text-lg transition-colors border-2 border-black cursor-pointer pl-12" %>
        <svg class="w-5 h-5 fill-current text-white absolute left-4 top-1/2 transform -translate-y-1/2 pointer-events-none" viewBox="0 0 24 24" style="top: calc(50% + 8px);">
          <path d="M2,21L23,12L2,3V10L17,12L2,14V21Z"/>
        </svg>
      </div>

      <%# キャンセルボタン %>
      <div class="text-center">
        <%= link_to(post.persisted? ? post_path(post) : posts_path,
              class: "inline-flex items-center gap-2 text-black hover:bg-gray-100 px-4 py-2 font-bold transition-colors border border-black") do %>
          <svg class="w-4 h-4 fill-current" viewBox="0 0 24 24">
            <path d="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.42-1.41L7.83 13H20v-2z"/>
          </svg>
          <span>キャンセル</span>
        <% end %>
      </div>

    <% end %>
  </div>
</div>
