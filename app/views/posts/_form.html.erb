<%# app/views/posts/_form.html.erb %>
<div class="max-w-2xl mx-auto px-4 py-8 bg-white min-h-screen">
  <div class="bg-white border-2 border-black p-6 lg:p-8">

    <%# フォームタイトル %>
    <div class="text-center mb-8">
      <div class="flex items-center justify-center gap-2 mb-4">
        <svg class="w-6 h-6 text-black fill-current" viewBox="0 0 24 24">
          <path d="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"/>
        </svg>
        <h1 class="text-2xl font-bold text-black">
          <%= post.persisted? ? "投稿を編集" : "新しい投稿を作成" %>
        </h1>
      </div>
    </div>

    <%= form_with(model: post, local: true, html: { class: "space-y-8" }) do |form| %>

      <%# きっかけ入力 %>
      <div class="p-4">
        <div class="flex items-center gap-2 mb-3">
          <svg class="w-5 h-5 text-black fill-current" viewBox="0 0 24 24">
            <path d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <%= form.label :trigger_content, "きっかけ", class: "text-sm font-bold text-black uppercase tracking-wide" %>
        </div>
        <%= form.text_area :trigger_content, rows: 4,
              placeholder: "どんなきっかけがありましたか？（例：本で読んだ言葉、動画で見た内容、会話で気づいたことなど）",
              class: "w-full px-3 py-2 border-2 border-black text-black placeholder-gray-500 focus:outline-none focus:border-gray-600 bg-white" %>
      </div>

      <%# アクションプラン入力 %>
      <div class="p-4">
        <div class="flex items-center gap-2 mb-3">
          <svg class="w-5 h-5 text-black fill-current" viewBox="0 0 24 24">
            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <%= form.label :action_plan, "アクションプラン", class: "text-sm font-bold text-black uppercase tracking-wide" %>
        </div>
        <%= form.text_area :action_plan, rows: 4,
              placeholder: "どんなアクションを起こしますか？（例：毎朝5分読書する、週1回散歩する、感謝の気持ちを伝えるなど）",
              class: "w-full px-3 py-2 border-2 border-black text-black placeholder-gray-500 focus:outline-none focus:border-gray-600 bg-white" %>
      </div>

      <%# ボタンエリア - 左右配置 %>
      <div class="pt-4 flex justify-between items-center">
        <%# 左側：キャンセルボタン %>
        <div>
          <%= link_to(post.persisted? ? post_path(post) : posts_path,
                class: "inline-flex items-center gap-2 text-black hover:bg-gray-100 px-4 py-2 font-bold transition-colors border border-black") do %>
            <svg class="w-4 h-4 fill-current" viewBox="0 0 24 24">
              <path d="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.42-1.41L7.83 13H20v-2z"/>
            </svg>
            <span>キャンセル</span>
          <% end %>
        </div>

        <%# 右側：投稿ボタン %>
        <div class="relative">
          <%= form.submit post.persisted? ? "更新する" : "投稿する",
                class: "bg-black hover:bg-gray-800 text-white py-3 px-6 font-bold text-lg transition-colors border-2 border-black cursor-pointer pl-12" %>
          <svg class="w-5 h-5 fill-current text-white absolute left-4 top-1/2 transform -translate-y-1/2 pointer-events-none" viewBox="0 0 24 24">
            <path d="M2,21L23,12L2,3V10L17,12L2,14V21Z"/>
          </svg>
        </div>
      </div>
      

    <% end %>
  </div>
</div>