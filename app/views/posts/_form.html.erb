<%# app/views/posts/_form.html.erb %>
<%# シンプルなYouTube URL入力フォーム %>
<div class="min-h-screen py-8">
  <div class="max-w-2xl mx-auto px-4">

    <%# 戻るリンク %>
    <div class="mb-6">
      <%= link_to posts_path, class: "inline-flex items-center gap-2 text-gray-500 hover:text-gray-700 transition-colors" do %>
        <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
          <path d="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.42-1.41L7.83 13H20v-2z"/>
        </svg>
        <span>戻る</span>
      <% end %>
    </div>

    <div class="bg-white rounded-xl border border-gray-200 p-6">
      <h1 class="text-xl font-bold text-gray-900 mb-6">
        <%= post.persisted? ? "動画を編集" : "動画を記録" %>
      </h1>

      <%= form_with(model: post, local: true, html: { class: "space-y-6" }) do |form| %>
        <%# エラーメッセージ表示 %>
        <% if post.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4">
            <div class="flex items-start gap-3">
              <svg class="w-5 h-5 text-red-500 flex-shrink-0 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
              <div>
                <h3 class="font-medium text-red-700">
                  <%= pluralize(post.errors.count, "件") %>のエラーがあります
                </h3>
                <ul class="mt-2 text-sm text-red-600 list-disc list-inside">
                  <% post.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <%# YouTube URL入力（検索機能付き） %>
        <div data-controller="youtube-search clipboard"
             data-youtube-search-url-value="<%= youtube_search_posts_path %>"
             data-clipboard-url-value="<%= post.youtube_url %>">

          <%= form.label :youtube_url, class: "block text-sm font-medium text-gray-900 mb-2" do %>
            YouTube動画 <span class="text-red-500">*</span>
          <% end %>

          <%# モード切り替えタブ %>
          <div class="flex gap-2 mb-3">
            <button type="button"
                    data-action="click->youtube-search#toggleMode"
                    data-mode="url"
                    class="flex-1 py-2 px-3 text-sm font-medium rounded-lg border-2 border-gray-900 bg-gray-900 text-white transition-colors">
              URLを貼り付け
            </button>
            <button type="button"
                    data-action="click->youtube-search#toggleMode"
                    data-mode="search"
                    class="flex-1 py-2 px-3 text-sm font-medium rounded-lg border-2 border-gray-200 text-gray-700 hover:border-gray-300 transition-colors">
              タイトルで検索
            </button>
          </div>

          <%# URL入力パネル %>
          <div data-youtube-search-target="urlPanel">
            <%= form.url_field :youtube_url,
                  placeholder: "https://www.youtube.com/watch?v=...",
                  required: true,
                  data: {
                    clipboard_target: "input",
                    youtube_search_target: "urlField",
                    action: "focus->clipboard#checkClipboard"
                  },
                  class: "w-full px-4 py-3 rounded-lg border border-gray-200 text-gray-900 placeholder-gray-400 focus:border-gray-400 focus:ring-1 focus:ring-gray-400 transition-colors" %>
            <p class="mt-1 text-xs text-gray-500">クリップボードからYouTube URLが自動検出されます</p>
          </div>

          <%# 検索パネル %>
          <div data-youtube-search-target="searchPanel" class="hidden">
            <div class="relative">
              <input type="text"
                     placeholder="動画タイトルを入力して検索..."
                     data-youtube-search-target="input"
                     data-action="input->youtube-search#search"
                     class="w-full px-4 py-3 rounded-lg border border-gray-200 text-gray-900 placeholder-gray-400 focus:border-gray-400 focus:ring-1 focus:ring-gray-400 transition-colors">
              <div class="absolute right-3 top-1/2 -translate-y-1/2">
                <svg class="w-5 h-5 text-gray-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                </svg>
              </div>
            </div>

            <%# 検索結果 %>
            <div data-youtube-search-target="results"
                 class="hidden mt-2 max-h-80 overflow-y-auto bg-white border border-gray-200 rounded-lg shadow-lg">
            </div>

            <p class="mt-2 text-xs text-gray-500">YouTube Data APIを使用して動画を検索します</p>
          </div>
        </div>

        <p class="text-sm text-gray-500">
          動画を記録すると、詳細ページでアクションプランを投稿できます。
        </p>

        <%# ボタンエリア %>
        <div class="pt-4">
          <%= form.submit post.persisted? ? "更新する" : "記録する",
                class: "w-full inline-flex items-center justify-center gap-2 px-8 py-3 rounded-lg bg-gray-900 text-white font-medium hover:bg-gray-800 active:scale-[0.98] transform transition-all cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
