<%# app/views/posts/_form.html.erb %>
<div class="max-w-2xl mx-auto px-4 py-8 bg-white min-h-screen">
  <div class="bg-white border-2 border-black p-6 lg:p-8">

    <%# フォームタイトル %>
    <div class="text-center mb-8">
      <div class="flex items-center justify-center gap-2 mb-4">
        <svg class="w-6 h-6 text-black fill-current" viewBox="0 0 24 24">
          <path d="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"/>
        </svg>
        <h1 class="text-2xl font-bold text-black">
          <%= post.persisted? ? "投稿を編集" : "新しい投稿を作成" %>
        </h1>
      </div>
    </div>

    <%= form_with(model: post, local: true, html: { class: "space-y-8" }) do |form| %>
      <%# エラーメッセージ表示 %>
      <% if post.errors.any? %>
        <div class="border-2 border-red-600 bg-red-50 p-4">
          <h2 class="font-bold text-red-600 mb-2">
            <%= pluralize(post.errors.count, "個") %>のエラーがあります
          </h2>
          <ul class="list-disc list-inside text-red-600">
            <% post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%# きっかけ入力 %>
      <div class="p-4">
        <div class="flex items-center gap-2 mb-3">
          <svg class="w-5 h-5 text-black fill-current" viewBox="0 0 24 24">
            <path d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <%= form.label :trigger_content, "きっかけ", class: "text-sm font-bold text-black uppercase tracking-wide" %>
        </div>
        <%= form.text_area :trigger_content, rows: 4,
              placeholder: "どんなきっかけがありましたか？（例：本で読んだ言葉、動画で見た内容、会話で気づいたことなど）",
              class: "w-full px-3 py-2 border-2 border-black text-black placeholder-gray-500 focus:outline-none focus:border-gray-600 bg-white" %>
      </div>

      <%# アクションプラン入力 %>
      <div class="p-4">
        <div class="flex items-center gap-2 mb-3">
          <svg class="w-5 h-5 text-black fill-current" viewBox="0 0 24 24">
            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <%= form.label :action_plan, "アクションプラン", class: "text-sm font-bold text-black uppercase tracking-wide" %>
        </div>
        <%= form.text_area :action_plan, rows: 4,
              placeholder: "どんなアクションを起こしますか？（例：毎朝5分読書する、週1回散歩する、感謝の気持ちを伝えるなど）",
              class: "w-full px-3 py-2 border-2 border-black text-black placeholder-gray-500 focus:outline-none focus:border-gray-600 bg-white" %>
      </div>

      <%# ===== カテゴリ選択（最もシンプル版） ===== %>
      <div class="p-4">
        <div class="flex items-center gap-2 mb-3">
          <svg class="w-5 h-5 text-black fill-current" viewBox="0 0 24 24">
            <path d="M3 4h18v2H3V4zm0 7h18v2H3v-2zm0 7h18v2H3v-2z"/>
          </svg>
          <%= form.label :category, class: "text-sm font-bold text-black uppercase tracking-wide" do %>
            カテゴリ <span class="text-red-600">*</span>
          <% end %>
        </div>
        
        <div class="space-y-2">
          <% Post.categories.keys.each do |category_key| %>
            <label class="flex items-center gap-3 p-3 border-2 border-black cursor-pointer hover:bg-gray-100">
              <%= form.radio_button :category, category_key, class: "w-5 h-5" %>
              <span class="text-2xl"><%= category_icon(category_key) %></span>
              <span class="font-bold text-black"><%= category_name_without_icon(category_key) %></span>
            </label>
          <% end %>
        </div>
        
        <p class="mt-2 text-sm text-gray-600">
          きっかけをどのように得たかを選択してください
        </p>
      </div>
      <%# ===== カテゴリ選択（ここまで） ===== %>

      <%# 画像アップロード %>
      <div class="p-4">
        <div class="flex items-center gap-2 mb-3">
          <svg class="w-5 h-5 text-black fill-current" viewBox="0 0 24 24">
            <path d="M21 19V5c0-1.1-.9-2-2-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2zM8.5 13.5l2.5 3.01L14.5 12l4.5 6H5l3.5-4.5z"/>
          </svg>
          <%= form.label :image, "画像（任意）", class: "text-sm font-bold text-black uppercase tracking-wide" %>
        </div>
        <%= form.file_field :image,
            accept: "image/*",
            class: "w-full px-3 py-2 border-2 border-black text-black bg-white file:mr-4 file:py-2 file:px-4 file:border-0 file:bg-black file:text-white file:font-bold file:cursor-pointer hover:file:bg-gray-800" %>
        
        <% if post.image.present? %>
          <div class="mt-3 border-2 border-black inline-block">
            <%= image_tag post.image.thumb.url, class: "h-20 w-20 object-cover" %>
          </div>
        <% end %>
      </div>

      <%# ===== ★ ここから追加：関連URL入力 ★ ===== %>
      <div class="p-4">
        <div class="flex items-center gap-2 mb-3">
          <svg class="w-5 h-5 text-black fill-current" viewBox="0 0 24 24">
            <path d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
          </svg>
          <%= form.label :related_url, "関連URL（任意）", class: "text-sm font-bold text-black uppercase tracking-wide" %>
        </div>
        <%= form.text_field :related_url,
            placeholder: "https://example.com/article",
            class: "w-full px-3 py-2 border-2 border-black text-black placeholder-gray-500 focus:outline-none focus:border-gray-600 bg-white" %>
        <p class="mt-2 text-sm text-gray-600">
          記事・動画・ブログなどの参考URLを入力できます（http:// または https:// で始まるURL）
        </p>
      </div>
      <%# ===== ★ ここまで追加 ★ ===== %>

      <%# ボタンエリア - 左右配置 %>
      <div class="pt-4 flex justify-between items-center">
        <%# 左側：キャンセルボタン %>
        <div>
          <%= link_to(post.persisted? ? post_path(post) : posts_path,
                class: "inline-flex items-center gap-2 text-black hover:bg-gray-100 px-4 py-2 font-bold transition-colors border border-black") do %>
            <svg class="w-4 h-4 fill-current" viewBox="0 0 24 24">
              <path d="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.42-1.41L7.83 13H20v-2z"/>
            </svg>
            <span>キャンセル</span>
          <% end %>
        </div>

        <%# 右側：投稿ボタン %>
        <div class="relative">
          <%= form.submit post.persisted? ? "更新する" : "投稿する",
                class: "bg-black hover:bg-gray-800 text-white py-3 px-6 font-bold text-lg transition-colors border-2 border-black cursor-pointer pl-12" %>
          <svg class="w-5 h-5 fill-current text-white absolute left-4 top-1/2 transform -translate-y-1/2 pointer-events-none" viewBox="0 0 24 24">
            <path d="M2,21L23,12L2,3V10L17,12L2,14V21Z"/>
          </svg>
        </div>
      </div>

    <% end %>
  </div>
</div>