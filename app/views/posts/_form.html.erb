<%# app/views/posts/_form.html.erb %>
<%# 新規投稿・編集共通のフォーム部分テンプレート（エラー表示は除外） %>
<%= form_with(model: post, local: true, html: { class: "space-y-6" }) do |form| %>
  <%# きっかけ入力フィールド %>
  <div>
    <%= form.label :trigger_content, "きっかけ", 
          class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_area :trigger_content, 
          rows: 4, 
          placeholder: "どんなきっかけがありましたか？（例：本で読んだ言葉、動画で見た内容、会話で気づいたことなど）",
          class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    <p class="mt-1 text-sm text-gray-500">10文字以上1000文字以内で入力してください</p>
  </div>

  <%# アクションプラン入力フィールド %>
  <div>
    <%= form.label :action_plan, "アクションプラン", 
          class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_area :action_plan, 
          rows: 4, 
          placeholder: "どんなアクションを起こしますか？（例：毎朝5分読書する、週1回散歩する、感謝の気持ちを伝えるなど）",
          class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    <p class="mt-1 text-sm text-gray-500">10文字以上500文字以内で入力してください</p>
  </div>

  <%# 送信ボタン %>
  <div>
    <%= form.submit post.persisted? ? "更新する" : "投稿する",
          class: "w-full bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-md transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
  </div>
<% end %>