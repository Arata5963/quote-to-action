<%# app/views/posts/_form.html.erb %>
<%# 新規投稿・編集共通のフォーム部分テンプレート（エラー表示は除外） %>
<%= form_with(model: post, local: true, html: { class: "space-y-6", multipart: true }) do |form| %>
  
  <%# きっかけ入力フィールド %>
  <div>
    <%= form.label :trigger_content, "きっかけ", 
          class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_area :trigger_content, 
          rows: 4, 
          placeholder: "どんなきっかけがありましたか？（例：本で読んだ言葉、動画で見た内容、会話で気づいたことなど）",
          class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    <p class="mt-1 text-sm text-gray-500">10文字以上1000文字以内で入力してください</p>
  </div>

  <%# アクションプラン入力フィールド %>
  <div>
    <%= form.label :action_plan, "アクションプラン", 
          class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_area :action_plan, 
          rows: 4, 
          placeholder: "どんなアクションを起こしますか？（例：毎朝5分読書する、週1回散歩する、感謝の気持ちを伝えるなど）",
          class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    <p class="mt-1 text-sm text-gray-500">10文字以上500文字以内で入力してください</p>
  </div>

  <%# 🆕 画像アップロードフィールド %>
  <div>
    <%= form.label :image, "画像（任意）", 
          class: "block text-sm font-medium text-gray-700 mb-2" %>
    
    <%# ファイル選択エリア %>
    <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-md hover:border-gray-400 transition-colors">
      <div class="space-y-1 text-center">
        <%# 既存画像がある場合の表示 %>
        <% if post.image.present? %>
          <div class="mb-4">
            <p class="text-sm text-gray-600 mb-2">現在の画像:</p>
            <img src="<%= post.image.thumb.url %>" alt="現在の画像" 
                 class="mx-auto h-32 w-32 object-cover rounded-lg shadow-md">
          </div>
        <% else %>
          <%# デフォルトアイコン %>
          <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
            <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
        <% end %>
        
        <%# ファイル選択ボタン %>
        <div class="flex text-sm text-gray-600">
          <%= form.file_field :image, 
                accept: "image/*",
                class: "sr-only",
                id: "file-upload" %>
          <label for="file-upload" class="relative cursor-pointer bg-white rounded-md font-medium text-blue-600 hover:text-blue-500 focus-within:outline-none focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-blue-500">
            <span>ファイルを選択</span>
          </label>
          <p class="pl-1">またはドラッグ&ドロップ</p>
        </div>
        <p class="text-xs text-gray-500">PNG, JPG, GIF形式（最大10MB）</p>
      </div>
    </div>
  </div>

  <%# 送信ボタン %>
  <div>
    <%= form.submit post.persisted? ? "更新する" : "投稿する",
          class: "w-full bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-md transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
  </div>
<% end %>