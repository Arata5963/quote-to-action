</div>

<script>
  const postId = <%= @post.id %>;
  const videoId = '<%= @post.youtube_video_id %>';
  const csrfToken = document.querySelector('meta[name="csrf-token"]').content;
  let selectedQuotes = new Set();

  // ãƒ¢ãƒ¼ãƒ€ãƒ«é–‹é–‰
  function openModal() {
    document.getElementById('modalOverlay').classList.add('active');
    loadSuggestions();
  }

  function closeModal() {
    document.getElementById('modalOverlay').classList.remove('active');
  }

  // ESCã§ãƒ¢ãƒ¼ãƒ€ãƒ«ã‚’é–‰ã˜ã‚‹
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && document.getElementById('modalOverlay').classList.contains('active')) {
      closeModal();
    }
  });

  // ã‚ªãƒ¼ãƒãƒ¼ãƒ¬ã‚¤ã‚¯ãƒªãƒƒã‚¯ã§é–‰ã˜ã‚‹
  document.getElementById('modalOverlay').addEventListener('click', (e) => {
    if (e.target.id === 'modalOverlay') closeModal();
  });

  // AIææ¡ˆã‚’èª­ã¿è¾¼ã‚€
  async function loadSuggestions() {
    document.getElementById('loadingState').style.display = 'block';
    document.getElementById('suggestionsContainer').style.display = 'none';
    document.getElementById('errorState').style.display = 'none';

    try {
      const response = await fetch(`/posts/${postId}/suggest_quotes`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': csrfToken
        }
      });

      const data = await response.json();

      if (data.success) {
        renderSuggestions(data.quotes);
        document.getElementById('loadingState').style.display = 'none';
        document.getElementById('suggestionsContainer').style.display = 'block';
      } else {
        throw new Error(data.error || 'å¼•ç”¨ã®å–å¾—ã«å¤±æ•—ã—ã¾ã—ãŸ');
      }
    } catch (error) {
      document.getElementById('loadingState').style.display = 'none';
      document.getElementById('errorState').style.display = 'block';
      document.getElementById('errorMessage').textContent = error.message;
    }
  }

  // ææ¡ˆã‚’æç”»
  function renderSuggestions(quotes) {
    const container = document.getElementById('quoteSuggestions');
    container.innerHTML = quotes.map((quote, i) => `
      <div class="quote-option" onclick="toggleQuote(this, ${i})">
        <input type="checkbox" id="quote-${i}">
        <div class="quote-option-text">${escapeHtml(quote)}</div>
      </div>
    `).join('');
    selectedQuotes.clear();
    window.suggestedQuotes = quotes;
  }

  // å¼•ç”¨ã®é¸æŠåˆ‡ã‚Šæ›¿ãˆ
  function toggleQuote(el, index) {
    const checkbox = el.querySelector('input[type="checkbox"]');
    checkbox.checked = !checkbox.checked;
    el.classList.toggle('selected', checkbox.checked);

    if (checkbox.checked) {
      selectedQuotes.add(index);
    } else {
      selectedQuotes.delete(index);
    }
  }

  // å¼•ç”¨ã‚’æŠ•ç¨¿
  async function submitQuotes() {
    const customQuote = document.getElementById('customQuote').value.trim();
    const quotesToSubmit = [];

    // é¸æŠã•ã‚ŒãŸææ¡ˆã‚’è¿½åŠ 
    selectedQuotes.forEach(index => {
      quotesToSubmit.push(window.suggestedQuotes[index]);
    });

    // ã‚«ã‚¹ã‚¿ãƒ å…¥åŠ›ã‚’è¿½åŠ 
    if (customQuote) {
      quotesToSubmit.push(customQuote);
    }

    if (quotesToSubmit.length === 0) {
      alert('å¼•ç”¨ã‚’é¸æŠã™ã‚‹ã‹ã€å…¥åŠ›ã—ã¦ãã ã•ã„');
      return;
    }

    const btn = document.getElementById('submitBtn');
    btn.disabled = true;
    btn.textContent = 'è¿½åŠ ä¸­...';

    try {
      const response = await fetch(`/posts/${postId}/add_quotes`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': csrfToken
        },
        body: JSON.stringify({ quotes: quotesToSubmit })
      });

      const data = await response.json();

      if (data.success) {
        // ãƒšãƒ¼ã‚¸ã‚’ãƒªãƒ­ãƒ¼ãƒ‰ã—ã¦æ–°ã—ã„å¼•ç”¨ã‚’è¡¨ç¤º
        window.location.reload();
      } else {
        throw new Error(data.error || 'ä¿å­˜ã«å¤±æ•—ã—ã¾ã—ãŸ');
      }
    } catch (error) {
      alert(error.message);
      btn.disabled = false;
      btn.textContent = 'è¿½åŠ ã™ã‚‹';
    }
  }

  // HTMLã‚¨ã‚¹ã‚±ãƒ¼ãƒ—
  function escapeHtml(text) {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
  }

  // å¼•ç”¨è¡¨ç¤ºã®å‡¦ç†ï¼ˆæ—¢å­˜ã®ã‚³ãƒ¼ãƒ‰ï¼‰
  <% if @quotes.any? %>
  (function() {
    const quotes = <%= raw @quotes.map { |q| { content: q.content, author: q.anonymous? ? "åŒ¿å" : (q.user ? q.user.name : "ãƒ¦ãƒ¼ã‚¶ãƒ¼") } }.to_json %>;
    let current = 0;

    const display = document.getElementById('quoteDisplay');
    const text = document.getElementById('quoteText');
    const author = document.getElementById('quoteAuthor');
    const dots = document.querySelectorAll('.showcase-dot');
    const num = document.getElementById('currentNum');
    const main = document.getElementById('showcaseMain');

    function showQuote(index) {
      if (index < 0 || index >= quotes.length) return;

      display.classList.add('fade-out');

      setTimeout(() => {
        text.textContent = quotes[index].content;
        author.textContent = 'â€” ' + quotes[index].author;
        current = index;

        dots.forEach((d, i) => d.classList.toggle('active', i === index));
        num.textContent = index + 1;

        display.classList.remove('fade-out');
        display.style.animation = 'none';
        display.offsetHeight;
        display.style.animation = 'floatIn 1s ease forwards';
      }, 500);
    }

    main.addEventListener('click', (e) => {
      // ãƒ¢ãƒ¼ãƒ€ãƒ«ãŒé–‹ã„ã¦ã„ã‚‹æ™‚ã¯ç„¡è¦–
      if (document.getElementById('modalOverlay').classList.contains('active')) return;
      const next = (current + 1) % quotes.length;
      showQuote(next);
    });

    dots.forEach(dot => {
      dot.addEventListener('click', (e) => {
        e.stopPropagation();
        const index = parseInt(dot.dataset.index);
        if (index !== current) showQuote(index);
      });
    });

    document.addEventListener('keydown', (e) => {
      // ãƒ¢ãƒ¼ãƒ€ãƒ«ãŒé–‹ã„ã¦ã„ã‚‹æ™‚ã¯ç„¡è¦–
      if (document.getElementById('modalOverlay').classList.contains('active')) return;

      if (e.key === 'ArrowRight' || e.key === ' ') {
        e.preventDefault();
        showQuote((current + 1) % quotes.length);
      } else if (e.key === 'ArrowLeft') {
        e.preventDefault();
        showQuote((current - 1 + quotes.length) % quotes.length);
      } else if (e.key === 'Escape') {
        window.history.back();
      }
    });
  })();
  <% end %>
</script>

