<%= turbo_stream.replace "ai-summary-container" do %>
  <div id="ai-summary-container" class="bg-red-50 rounded-lg p-4 border border-red-200">
    <div class="flex items-center gap-2">
      <svg class="w-5 h-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <span class="text-red-700"><%= @error %></span>
    </div>
    <%= button_to "再試行", summarize_post_path(@post), method: :post, class: "mt-3 text-sm text-red-600 hover:text-red-800 underline", data: { turbo_stream: true } %>
  </div>
<% end %>
