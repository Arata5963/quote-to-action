<%# app/views/posts/_empty_state.html.erb %>
<%# 投稿がない場合の空状態表示 %>

<div class="rounded-2xl bg-white border border-accent/20 p-12 text-center shadow-sm">
  <div class="mx-auto h-14 w-14 rounded-full bg-accent/10 flex items-center justify-center">
    <svg class="h-7 w-7 text-primary/40" viewBox="0 0 24 24" fill="none" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
    </svg>
  </div>
  <h3 class="mt-4 text-xl font-bold text-primary">
    <% if params[:q].present? %>
      検索条件に一致する投稿が見つかりませんでした
    <% elsif params[:tab] == 'mine' %>
      あなたの投稿がまだありません
    <% else %>
      まだ投稿がありません
    <% end %>
  </h3>
  <% if user_signed_in? %>
    <p class="mt-1 text-sm text-primary/60">最初の一歩を記録しよう。</p>
    <%= link_to new_post_path,
          class: "mt-6 inline-flex items-center gap-2 rounded-xl bg-accent px-5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-accent/90 transition-colors" do %>
      <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/></svg>
      投稿する
    <% end %>
  <% end %>
</div>
