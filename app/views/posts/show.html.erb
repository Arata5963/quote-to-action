<%# app/views/posts/show.html.erb %>
<% content_for :title, @post.action_plan.truncate(30) %>

<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-2xl mx-auto px-4">

    <%# 戻るリンク %>
    <div class="mb-6">
      <%= link_to posts_path, class: "inline-flex items-center gap-2 text-gray-600 hover:text-primary transition-colors" do %>
        <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
          <path d="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.42-1.41L7.83 13H20v-2z"/>
        </svg>
        <span>投稿一覧に戻る</span>
      <% end %>
    </div>

    <%# メインカード %>
    <div class="bg-white rounded-2xl border border-gray-200 shadow-card overflow-hidden">

      <%# YouTube埋め込み %>
      <div class="aspect-video">
        <iframe
          src="<%= @post.youtube_embed_url %>"
          class="w-full h-full"
          allowfullscreen
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        ></iframe>
      </div>

      <div class="p-6 lg:p-8">

        <%# ヘッダー：カテゴリ + アクション %>
        <div class="flex items-center justify-between mb-6">
          <span class="inline-flex items-center gap-2 px-3 py-1.5 rounded-lg bg-gray-100 text-sm font-medium">
            <span class="text-lg"><%= category_icon(@post.category) %></span>
            <%= category_name_without_icon(@post.category) %>
          </span>

          <% if user_signed_in? && @post.user == current_user %>
            <div class="flex items-center gap-1">
              <%= link_to edit_post_path(@post),
                    class: "p-2 text-gray-500 hover:text-primary hover:bg-gray-100 rounded-lg transition-colors",
                    title: "編集" do %>
                <svg class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"/>
                </svg>
              <% end %>

              <%= link_to post_path(@post),
                    data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" },
                    class: "p-2 text-gray-500 hover:text-danger hover:bg-danger-50 rounded-lg transition-colors",
                    title: "削除" do %>
                <svg class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"/>
                </svg>
              <% end %>
            </div>
          <% end %>
        </div>

        <%# アクションプラン %>
        <div class="mb-6 p-4 bg-accent-50 rounded-xl border border-accent-200">
          <h2 class="text-sm font-semibold text-accent-700 uppercase tracking-wide mb-2">アクションプラン</h2>
          <p class="text-gray-900 whitespace-pre-line"><%= @post.action_plan %></p>
        </div>

        <%# リマインダー状態表示（自分の投稿のみ） %>
        <% if user_signed_in? && @post.user == current_user %>
          <div class="mb-6 p-4 bg-gray-50 rounded-xl border border-gray-200">
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-3">
                <svg class="w-5 h-5 text-accent-600" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 22c1.1 0 2-.9 2-2h-4c0 1.1.9 2 2 2zm6-6v-5c0-3.07-1.63-5.64-4.5-6.32V4c0-.83-.67-1.5-1.5-1.5s-1.5.67-1.5 1.5v.68C7.64 5.36 6 7.92 6 11v5l-2 2v1h16v-1l-2-2zm-2 1H8v-6c0-2.48 1.51-4.5 4-4.5s4 2.02 4 4.5v6z"/>
                </svg>
                <div>
                  <span class="text-sm font-semibold text-gray-700"><%= t('reminders.label') %></span>
                  <% if @post.reminder.present? %>
                    <p class="text-sm text-accent-600 font-medium">
                      毎日 <%= @post.reminder.remind_time.strftime("%H:%M") %> に通知
                    </p>
                  <% else %>
                    <p class="text-sm text-gray-500"><%= t('reminders.disabled') %></p>
                  <% end %>
                </div>
              </div>
              <%= link_to edit_post_path(@post), class: "text-sm text-primary hover:underline" do %>
                設定変更
              <% end %>
            </div>
          </div>
        <% end %>

        <%# YouTube URL %>
        <div class="mb-6">
          <h2 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-2">YouTube動画</h2>
          <%= link_to @post.youtube_url,
                target: "_blank",
                rel: "noopener noreferrer",
                class: "inline-flex items-center gap-2 px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors" do %>
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M8 5v14l11-7z"/>
            </svg>
            <span class="font-medium">YouTubeで見る</span>
          <% end %>
        </div>

        <%# 達成セクション %>
        <div class="pt-6 border-t border-gray-100">
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
              <span class="text-3xl"><%= post_badge_tag(@post) %></span>
              <div>
                <p class="text-2xl font-bold text-gray-900"><%= @post.achievements.count %></p>
                <p class="text-sm text-gray-500">達成</p>
              </div>
            </div>

            <% if user_signed_in? && @post.user == current_user %>
              <% if @post.achieved? %>
                <div class="text-right">
                  <div class="inline-flex items-center gap-2 bg-green-100 text-green-800 px-6 py-3 rounded-xl font-bold">
                    <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                    </svg>
                    <span>達成済み</span>
                  </div>
                  <p class="mt-1 text-xs text-gray-500"><%= l(@post.achieved_at, format: :long) %></p>
                </div>
              <% else %>
                <%= button_to post_achievements_path(@post), method: :post,
                      class: "inline-flex items-center gap-2 bg-accent text-primary px-6 py-3 rounded-xl font-bold shadow-lg hover:bg-accent-500 active:scale-95 transform transition-all" do %>
                  <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                  </svg>
                  <span>達成！</span>
                <% end %>
              <% end %>
            <% elsif user_signed_in? %>
              <p class="text-sm text-gray-500 bg-gray-50 px-4 py-2 rounded-lg">
                投稿者のみ達成記録できます
              </p>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <%# コメントセクション %>
    <div class="mt-6 bg-white rounded-2xl border border-gray-200 shadow-card p-6">
      <div class="flex items-center gap-2 mb-6">
        <svg class="w-5 h-5 text-gray-400" viewBox="0 0 24 24" fill="currentColor">
          <path d="M20 2H4c-1.1 0-2 .9-2 2v18l4-4h14c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zm0 14H6l-2 2V4h16v12z"/>
        </svg>
        <h2 class="text-lg font-bold text-gray-900">
          コメント (<%= @post.comments.count %>)
        </h2>
      </div>

      <%# コメント一覧 %>
      <div class="space-y-4 mb-6">
        <% if @post.comments.any? %>
          <%= render @post.comments.recent %>
        <% else %>
          <p class="text-center text-gray-500 py-8 bg-gray-50 rounded-xl">
            まだコメントがありません
          </p>
        <% end %>
      </div>

      <%# コメント投稿フォーム %>
      <% if user_signed_in? %>
        <%= render 'comments/form' %>
      <% else %>
        <div class="text-center py-6 bg-gray-50 rounded-xl">
          <p class="text-gray-600 mb-3">コメントするにはログインが必要です</p>
          <%= link_to "ログイン", new_user_session_path,
                class: "inline-flex items-center gap-2 bg-primary text-white px-4 py-2 rounded-xl font-medium hover:bg-primary-800 transition-colors" %>
        </div>
      <% end %>
    </div>

  </div>
</div>
