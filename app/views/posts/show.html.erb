<%# app/views/posts/show.html.erb %>
<%# 動画詳細ページ（シンプル版） %>
<% content_for :title, @post.youtube_title&.truncate(30) || "動画詳細" %>

<div class="min-h-screen bg-white">
  <%# ===== メインコンテンツエリア（620px幅・中央配置） ===== %>
  <div style="max-width: 620px; margin: 0 auto; padding: 0 20px;">

    <%# 戻るボタン %>
    <div class="py-4">
      <% back_path = params[:from] == 'mypage' ? mypage_path : posts_path %>
      <%= link_to back_path, class: "inline-flex items-center gap-1 text-sm text-gray-400 hover:text-gray-600 transition-colors" do %>
        <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"/>
        </svg>
        <span>戻る</span>
      <% end %>
    </div>

    <%# ===== ヒーロー: YouTube サムネイル ===== %>
    <%= link_to @post.youtube_url,
          target: "_blank",
          rel: "noopener noreferrer",
          class: "block relative group mb-8" do %>
      <div class="aspect-video w-full rounded-lg overflow-hidden bg-gray-100">
        <%= image_tag @post.youtube_thumbnail_url(size: :hqdefault),
              alt: @post.youtube_title,
              class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-300",
              loading: "lazy",
              onerror: "this.src='#{@post.youtube_thumbnail_url(size: :mqdefault)}'" %>
      </div>
      <%# 再生ボタン %>
      <div class="absolute inset-0 flex items-center justify-center">
        <div class="w-14 h-14 bg-black/60 rounded-full flex items-center justify-center group-hover:bg-red-600 group-hover:scale-110 transition-all duration-300">
          <svg class="w-6 h-6 text-white ml-0.5" viewBox="0 0 24 24" fill="currentColor">
            <path d="M8 5v14l11-7z"/>
          </svg>
        </div>
      </div>
      <%# YouTube ラベル %>
      <div class="absolute top-3 left-3 flex items-center gap-1.5 bg-black/60 text-white text-xs px-2 py-1 rounded">
        <svg class="w-3.5 h-3.5" viewBox="0 0 24 24" fill="currentColor">
          <path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"/>
        </svg>
        <span>YouTubeで見る</span>
      </div>
    <% end %>

    <%# ===== タイトル ===== %>
    <h1 style="font-size: 22px; font-weight: 700; color: #1a1a1a; line-height: 1.4; margin-bottom: 12px;">
      <%= @post.youtube_title %>
    </h1>

    <%# ===== チャンネル名 ===== %>
    <% if @post.youtube_channel_name.present? %>
      <p style="font-size: 14px; color: #6b7280; margin-bottom: 16px;">
        <%= @post.youtube_channel_name %>
      </p>
    <% end %>

    <%# ===== いいね数 + ユーザー数 ===== %>
    <div class="flex items-center gap-3 mb-5 flex-wrap">
      <div class="flex items-center gap-1 text-gray-500">
        <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z"/>
        </svg>
        <span class="text-sm"><%= @post.cheers.count %></span>
      </div>
      <span class="text-xs text-gray-400"><%= @post.entry_users.count %> ユーザーがアクションプランを投稿</span>
    </div>

    <%# ===== 日時 ===== %>
    <div style="border-top: 1px solid #f3f4f6; padding: 16px 0; margin-bottom: 24px;">
      <div class="flex items-center justify-between">
        <p style="font-size: 12px; color: #9ca3af;"><%= l(@post.created_at, format: :long) %></p>
        <% if user_signed_in? && @post.has_entries_by?(current_user) %>
          <div class="flex items-center gap-2" style="font-size: 12px;">
            <%= link_to "削除", post_path(@post),
                  data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" },
                  class: "text-gray-400 hover:text-red-500" %>
          </div>
        <% end %>
      </div>
    </div>

    <%# ===== クイズ結果セクション ===== %>
    <% if user_signed_in? && @post.quiz&.answered_by?(current_user) %>
      <% latest_answer = @post.quiz.latest_answer_for(current_user) %>
      <div style="background: #f0fdf4; border: 1px solid #bbf7d0; border-radius: 12px; padding: 16px; margin-bottom: 24px;">
        <div style="display: flex; align-items: center; gap: 12px;">
          <span style="font-size: 24px;">✅</span>
          <div style="flex: 1;">
            <p style="font-size: 14px; font-weight: 500; color: #166534;">クイズ回答済み</p>
            <p style="font-size: 13px; color: #15803d;">
              スコア: <%= latest_answer.score %>/<%= latest_answer.total_questions %> (<%= latest_answer.percentage %>%)
            </p>
          </div>
          <%= link_to "もう一度挑戦", post_quiz_path(@post), style: "padding: 8px 16px; background: white; color: #15803d; font-size: 13px; font-weight: 500; border: 1px solid #bbf7d0; border-radius: 8px; text-decoration: none;" %>
        </div>
      </div>
    <% elsif @post.quiz.present? %>
      <div style="background: #fef3c7; border: 1px solid #fde68a; border-radius: 12px; padding: 16px; margin-bottom: 24px;">
        <div style="display: flex; align-items: center; gap: 12px;">
          <span style="font-size: 24px;">🧠</span>
          <div style="flex: 1;">
            <p style="font-size: 14px; font-weight: 500; color: #92400e;">理解度チェッククイズがあります</p>
            <p style="font-size: 13px; color: #b45309;">この動画の内容をどれだけ理解できたかチェックしましょう</p>
          </div>
          <%= link_to "挑戦する", post_quiz_path(@post), style: "padding: 8px 16px; background: #f59e0b; color: white; font-size: 13px; font-weight: 500; border-radius: 8px; text-decoration: none; white-space: nowrap;" %>
        </div>
      </div>
    <% end %>

    <%# ===== アクションプランセクション ===== %>
    <section style="border-top: 1px solid #f3f4f6; padding-top: 32px; margin-bottom: 32px;">
      <h2 style="font-size: 18px; font-weight: 700; color: #1a1a1a; margin-bottom: 24px; display: flex; align-items: center; gap: 8px;">
        <span>🎯</span>
        <span>みんなのアクションプラン</span>
        <span style="font-size: 14px; font-weight: 400; color: #9ca3af;">(<%= @post.post_entries.count %>)</span>
      </h2>

      <%# アクションプラン投稿フォーム（ログインユーザーのみ） %>
      <% if user_signed_in? %>
        <% if @post.has_entries_by?(current_user) %>
          <%# 投稿済みメッセージ %>
          <div class="flex gap-3 mb-6">
            <div class="flex-shrink-0">
              <% if current_user.avatar.present? %>
                <%= image_tag current_user.avatar.url, class: "w-10 h-10 rounded-full object-cover border border-gray-100" %>
              <% else %>
                <div class="w-10 h-10 rounded-full bg-gradient-to-br from-orange-400 to-orange-500 flex items-center justify-center text-white font-medium text-sm">
                  <%= current_user.name&.first&.upcase || '?' %>
                </div>
              <% end %>
            </div>
            <div class="flex-1">
              <div class="relative">
                <div class="absolute -left-2 top-3 w-0 h-0 border-t-[6px] border-t-transparent border-b-[6px] border-b-transparent border-r-[8px] border-r-green-50"></div>
                <div class="bg-green-50 border border-green-100 rounded-2xl rounded-tl-sm p-4">
                  <p class="text-sm text-green-700 flex items-center gap-2">
                    <svg class="w-4 h-4" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    この動画にはすでにアクションプランを投稿しています
                  </p>
                </div>
              </div>
            </div>
          </div>
        <% else %>
          <%# 投稿フォーム（吹き出しスタイル） %>
          <div class="flex gap-3 mb-6">
            <div class="flex-shrink-0">
              <% if current_user.avatar.present? %>
                <%= image_tag current_user.avatar.url, class: "w-10 h-10 rounded-full object-cover border border-gray-100" %>
              <% else %>
                <div class="w-10 h-10 rounded-full bg-gradient-to-br from-orange-400 to-orange-500 flex items-center justify-center text-white font-medium text-sm">
                  <%= current_user.name&.first&.upcase || '?' %>
                </div>
              <% end %>
            </div>
            <div class="flex-1">
              <div class="text-sm font-medium text-gray-900 mb-1"><%= current_user.name %></div>
              <div class="relative">
                <div class="absolute -left-2 top-3 w-0 h-0 border-t-[6px] border-t-transparent border-b-[6px] border-b-transparent border-r-[8px] border-r-orange-50"></div>
                <%= form_with url: post_post_entries_path(@post), method: :post, local: true, class: "bg-orange-50 border border-orange-100 rounded-2xl rounded-tl-sm p-4" do %>
                  <textarea name="post_entry[content]" rows="3"
                            required
                            placeholder="この動画を見て、何をしますか？&#10;&#10;例: 毎朝10分の瞑想を始める"
                            class="w-full p-3 text-[15px] bg-white border border-orange-200 rounded-xl resize-none focus:outline-none focus:border-orange-300 focus:ring-2 focus:ring-orange-100 transition-all"></textarea>

                  <div class="flex items-center justify-between mt-3 pt-3 border-t border-orange-100">
                    <div class="flex items-center gap-4">
                      <div class="flex items-center gap-2">
                        <svg class="w-4 h-4 text-gray-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                        </svg>
                        <input type="date" name="post_entry[deadline]"
                               class="text-sm text-gray-600 bg-transparent border-none p-0 focus:outline-none cursor-pointer"
                               placeholder="期日">
                      </div>
                      <label class="flex items-center gap-1.5 text-xs text-gray-500 cursor-pointer hover:text-gray-700">
                        <input type="checkbox" name="post_entry[anonymous]" value="1" class="w-3.5 h-3.5 rounded">
                        <span>匿名</span>
                      </label>
                    </div>
                    <button type="submit"
                            class="inline-flex items-center gap-1.5 px-4 py-2 bg-orange-500 hover:bg-orange-600 text-white text-sm font-medium rounded-full transition-colors shadow-sm">
                      <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
                      </svg>
                      投稿
                    </button>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <%# 未ログイン状態 %>
        <div class="flex gap-3 mb-6">
          <div class="flex-shrink-0">
            <div class="w-10 h-10 rounded-full bg-gray-200 flex items-center justify-center">
              <svg class="w-5 h-5 text-gray-400" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
              </svg>
            </div>
          </div>
          <div class="flex-1">
            <div class="relative">
              <div class="absolute -left-2 top-3 w-0 h-0 border-t-[6px] border-t-transparent border-b-[6px] border-b-transparent border-r-[8px] border-r-gray-100"></div>
              <div class="bg-gray-100 border border-gray-200 rounded-2xl rounded-tl-sm p-4 text-center">
                <p class="text-sm text-gray-600 mb-3">アクションプランを投稿するにはログインが必要です</p>
                <%= link_to new_user_session_path, class: "inline-flex items-center gap-1.5 px-4 py-2 bg-orange-500 hover:bg-orange-600 text-white text-sm font-medium rounded-full transition-colors" do %>
                  <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"/>
                  </svg>
                  ログイン
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <%# 既存のアクションプラン一覧 %>
      <% if @post.post_entries.any? %>
        <div class="space-y-5">
          <% @post.post_entries.recent.each do |entry| %>
            <%= render 'post_entries/entry_card', entry: entry %>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8 px-4 bg-gray-50 rounded-2xl">
          <div class="text-4xl mb-3 opacity-50">💭</div>
          <p class="text-sm text-gray-500">まだアクションプランがありません</p>
          <p class="text-xs text-gray-400 mt-1">最初のアクションプランを投稿してみましょう！</p>
        </div>
      <% end %>
    </section>

    <%# 下部余白 %>
    <div style="height: 40px;"></div>
  </div>
</div>
