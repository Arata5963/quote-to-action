<%# app/views/posts/index.html.erb %>
<% content_for :title, "投稿一覧" %>
<div class="max-w-5xl mx-auto px-4 py-8 bg-white min-h-screen">
  <%# ページタイトル %>
  <div class="mb-8 text-center">
    <h1 class="text-3xl font-bold text-black mb-4">投稿一覧</h1>
    <div class="w-24 h-1 bg-black mx-auto"></div>
  </div>

  <% if @posts.empty? %>
    <div class="text-center py-12">
      <div class="mb-6">
        <svg class="w-16 h-16 mx-auto text-black mb-4" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2C13.1 2 14 2.9 14 4C14 5.1 13.1 6 12 6C10.9 6 10 5.1 10 4C10 2.9 10.9 2 12 2ZM21 9V7L15 1H5C3.89 1 3 1.89 3 3V19C3 20.1 3.9 21 5 21H11V19H5V3H13V9H21Z"/>
        </svg>
        <div class="text-black text-lg mb-6">まだ投稿がありません</div>
      </div>
      <% if user_signed_in? %>
        <%= link_to new_post_path, class: "inline-flex items-center gap-2 bg-black hover:bg-gray-800 text-white px-6 py-3 font-bold transition-colors border-2 border-black" do %>
          <svg class="w-4 h-4 fill-current" viewBox="0 0 24 24">
            <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
          </svg>
          <span>最初のきっかけを投稿してみましょう</span>
        <% end %>
      <% else %>
        <%= link_to new_user_session_path, class: "inline-flex items-center gap-2 bg-black hover:bg-gray-800 text-white px-6 py-3 font-bold transition-colors border-2 border-black" do %>
          <svg class="w-4 h-4 fill-current" viewBox="0 0 24 24">
            <path d="M10 17v-3H3v-4h7V7l5 5-5 5z"/>
          </svg>
          <span>ログインして投稿してみよう</span>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <%# 投稿一覧 %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% @posts.each do |post| %>
        <%= link_to post, class: "group block bg-white border-2 border-black hover:bg-gray-50 transition-all overflow-hidden max-w-sm mx-auto w-full" do %>

          <%# ===== 画像部分：達成数バッジを枠いっぱいに表示 ===== %>
          <div class="relative h-48 bg-white border-b-2 border-black overflow-hidden">
            <%= post_badge_tag(
                  post,
                  class: "w-full h-full object-cover object-center",  # ← coverに変更
                  loading: "lazy"
                ) %>

            <%# 右上：総達成数 %>
            <div class="absolute top-3 right-3">
              <div class="bg-black text-white text-xs font-bold px-2 py-1 flex items-center gap-1">
                <svg class="w-3 h-3 fill-current" viewBox="0 0 24 24">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
                <span><%= post.achievements.count %></span>
              </div>
            </div>
          </div>

          <%# テキスト部分 %>
          <div class="p-4">
            <div class="flex items-start gap-2 mb-3">
              <svg class="w-4 h-4 text-black mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <h3 class="text-lg font-bold text-black leading-tight group-hover:text-gray-600 transition-colors">
                <%= post.action_plan.truncate(60) %>
              </h3>
            </div>

            <div class="flex items-center gap-2 mb-3">
              <svg class="w-3 h-3 text-black" fill="currentColor" viewBox="0 0 24 24">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <div class="text-xs text-black font-medium">
                <%= post.created_at.strftime("%Y.%m.%d") %>
              </div>
            </div>

            <div class="flex items-start gap-2">
              <svg class="w-4 h-4 text-black mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                <path d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <p class="text-sm text-black leading-relaxed">
                <%= post.trigger_content.truncate(100) %>
              </p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>