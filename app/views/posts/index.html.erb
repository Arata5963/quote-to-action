<%# ===== 統一検索フォーム ===== %>
<div class="mb-6 bg-white border-4 border-black p-6">
  <%= search_form_for @q, url: posts_path, method: :get, 
      html: { id: 'search_form', class: "flex flex-wrap gap-3 items-end" } do |f| %>
    
    <%# 検索ワード入力 %>
    <div class="flex-1 min-w-[250px]">
      <%= f.label :trigger_content_or_action_plan_cont, "検索", class: "block font-bold text-black mb-2" %>
      <%= f.search_field :trigger_content_or_action_plan_cont,
          placeholder: "きっかけやアクションプランで検索...",
          class: "w-full px-4 py-2 border-2 border-black focus:outline-none focus:border-gray-600" %>
    </div>
    
    <%# タブ（全体 / 自分の投稿） - 自動送信 %>
    <div class="w-40">
      <label class="block font-bold text-black mb-2">表示</label>
      <%= select_tag :tab,
          options_for_select(
            [
              ['全体', ''],
              user_signed_in? ? ['自分の投稿', 'mine'] : nil
            ].compact,
            params[:tab]
          ),
          class: "w-full px-4 py-2 border-2 border-black font-bold bg-white cursor-pointer hover:bg-gray-100 focus:outline-none",
          onchange: "document.getElementById('search_form').submit()" %>
    </div>
    
    <%# カテゴリ - 自動送信 %>
    <div class="w-48">
      <label class="block font-bold text-black mb-2">カテゴリ</label>
      <%= select_tag :category,
          options_for_select(
            [['すべて', '']] + Post.categories.keys.map { |k| ["#{category_icon(k)} #{category_name_without_icon(k)}", k] },
            params[:category]
          ),
          class: "w-full px-4 py-2 border-2 border-black font-bold bg-white cursor-pointer hover:bg-gray-100 focus:outline-none",
          onchange: "document.getElementById('search_form').submit()" %>
    </div>
    
    <%# 検索ボタン %>
    <div>
      <%= f.submit "検索", class: "px-6 py-2 bg-black text-white hover:bg-gray-800 transition-colors font-bold cursor-pointer h-[42px]" %>
    </div>
    
    <%# クリアボタン %>
    <div>
      <%= link_to "クリア", posts_path, class: "inline-block px-6 py-2 bg-white text-black border-2 border-black hover:bg-gray-100 transition-colors font-bold h-[42px] leading-[26px]" %>
    </div>
  <% end %>
</div>

<%# 投稿がない場合のメッセージ %>
<% if @posts.empty? %>
  <div class="bg-white border-4 border-black p-12 text-center">
    <div class="mb-4">
      <svg class="w-16 h-16 mx-auto text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
      </svg>
    </div>
    <p class="text-xl font-bold text-black mb-2">
      <% if params[:q].present? %>
        検索条件に一致する投稿が見つかりませんでした
      <% elsif params[:category].present? %>
        <%= category_icon(params[:category]) %><%= category_name_without_icon(params[:category]) %>の投稿がまだありません
      <% elsif params[:tab] == 'mine' %>
        あなたの投稿がまだありません
      <% else %>
        まだ投稿がありません
      <% end %>
    </p>
    <% if user_signed_in? %>
      <p class="text-gray-600 mb-6">最初の投稿をしてみましょう！</p>
      <%= link_to "投稿する", new_post_path, class: "inline-block px-8 py-3 bg-black text-white hover:bg-gray-800 transition-colors font-bold" %>
    <% end %>
  </div>
<% else %>
  <%# 投稿一覧 %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @posts.each do |post| %>
      <div class="bg-white border-4 border-black p-6 hover:shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] transition-all">
        
        <%# 投稿者情報とカテゴリ %>
        <div class="flex items-center justify-between mb-4">
          <div class="flex items-center gap-3">
            <% if post.user.avatar.present? %>
              <%= image_tag post.user.avatar.thumb.url, 
                    class: "w-10 h-10 border-2 border-black object-cover", 
                    alt: "プロフィール画像" %>
            <% else %>
              <div class="w-10 h-10 bg-gray-200 border-2 border-black flex items-center justify-center">
                <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                </svg>
              </div>
            <% end %>
            
            <div>
              <p class="font-bold text-black"><%= post.user.email.split('@').first %></p>
              <p class="text-xs text-gray-600"><%= l(post.created_at, format: :short) %></p>
            </div>
          </div>

          <%# カテゴリバッジ %>
          <div class="flex items-center gap-1 px-2 py-1 bg-gray-100 border-2 border-black">
            <span class="text-sm"><%= category_icon(post.category) %></span>
          </div>
        </div>

        <%# 画像表示 %>
        <% if post.image.present? %>
          <div class="mb-4 border-2 border-black overflow-hidden">
            <%= image_tag post.image.url, 
                  class: "w-full h-48 object-cover", 
                  alt: "投稿画像" %>
          </div>
        <% end %>

        <%# きっかけ内容 %>
        <div class="mb-3">
          <h3 class="font-bold text-black mb-2 text-lg">📝 きっかけ</h3>
          <p class="text-gray-700 line-clamp-3"><%= post.trigger_content %></p>
        </div>

        <%# アクションプラン %>
        <div class="mb-4">
          <h3 class="font-bold text-black mb-2 text-lg">🎯 アクションプラン</h3>
          <p class="text-gray-700 line-clamp-3"><%= post.action_plan %></p>
        </div>

        <%# 達成バッジ、いいねボタン、コメント数、詳細ボタン %>
        <div class="flex items-center justify-between pt-4 border-t-2 border-black">
          <div class="flex items-center gap-4">
            <%# 達成バッジ %>
            <div class="flex items-center gap-1">
              <%= post_badge_tag(post, class: "w-6 h-6") %>
              <span class="text-sm font-bold text-black"><%= post.achievements.count %></span>
            </div>
            
            <%# いいねボタン %>
            <div id="like_button_<%= post.id %>">
              <%= render 'likes/like_button', post: post %>
            </div>

            <%# コメント数 %>
            <div class="flex items-center gap-1">
              <svg class="w-5 h-5 text-black" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20 2H4c-1.1 0-2 .9-2 2v18l4-4h14c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zm0 14H6l-2 2V4h16v12z"/>
              </svg>
              <span class="text-sm font-bold text-black"><%= post.comments.count %></span>
            </div>
          </div>

          <%# 詳細ボタン %>
          <%= link_to "詳細", post_path(post), 
                class: "px-4 py-2 bg-black text-white hover:bg-gray-800 transition-colors font-bold text-sm" %>
        </div>
      </div>
    <% end %>
  </div>

  <%# ページネーション %>
  <div class="mt-8">
    <%= paginate @posts %>
  </div>
<% end %>

<%# 新規投稿ボタン %>
<% if user_signed_in? %>
  <div class="fixed bottom-8 right-8">
    <%= link_to new_post_path, 
          class: "flex items-center justify-center w-16 h-16 bg-black text-white hover:bg-gray-800 transition-colors shadow-lg border-4 border-black hover:shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]" do %>
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
    <% end %>
  </div>
<% end %>