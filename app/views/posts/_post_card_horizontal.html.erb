<%# app/views/posts/_post_card_horizontal.html.erb %>
<%# Zenn風の横長カード（2カラムグリッド用） %>
<%= link_to post_path(post), class: "block group" do %>
  <div class="flex gap-3 p-3 rounded-lg hover:bg-gray-50 transition-colors">
    <%# サムネイル（左側・正方形） %>
    <div class="flex-shrink-0 w-16 h-16 rounded-lg overflow-hidden bg-gray-100">
      <%= image_tag post.youtube_thumbnail_url(size: :default),
          alt: post.youtube_title,
          class: "w-full h-full object-cover",
          loading: "lazy" %>
    </div>

    <%# コンテンツ（右側） %>
    <div class="flex-1 min-w-0">
      <%# タイトル %>
      <h3 class="text-[15px] font-bold text-gray-900 line-clamp-2 leading-snug group-hover:text-blue-600 transition-colors">
        <%= post.youtube_title.presence || post.action_plan.presence || "無題" %>
      </h3>

      <%# メタ情報 %>
      <div class="flex items-center gap-2 mt-1.5">
        <span class="text-xs text-gray-500"><%= post.entry_users.count %> users</span>
        <span class="text-xs text-gray-400"><%= time_ago_in_words(post.created_at) %> ago</span>
        <%# いいね数 %>
        <span class="flex items-center gap-0.5 text-xs text-gray-400 ml-auto">
          <svg class="w-3.5 h-3.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z"/>
          </svg>
          <%= post.cheers.count %>
        </span>
      </div>
    </div>
  </div>
<% end %>
