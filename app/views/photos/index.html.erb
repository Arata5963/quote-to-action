<!-- app/views/photos/index.html.erb -->
<h1>Photos</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= photo.title %></td>
        <td>
          <% if photo.image.present? %>
            <%= image_tag photo.image.thumb.url, width: 100 %>
          <% end %>
        </td>
        <td><%= link_to 'Show', photo %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Photo', new_photo_path %>