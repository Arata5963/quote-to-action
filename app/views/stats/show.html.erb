<%# app/views/stats/show.html.erb %>
<% content_for :title, "統計・分析" %>

<div class="min-h-screen bg-gray-50">
  <div class="max-w-4xl mx-auto px-4 py-8">

    <%# ヘッダー %>
    <div class="mb-8">
      <h1 class="text-2xl font-bold text-gray-900">統計・分析</h1>
      <p class="text-gray-500 mt-1">あなたの視聴・学習の記録を分析</p>
    </div>

    <%# サマリーカード %>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
      <%# 総動画数 %>
      <div class="bg-white rounded-xl p-4 border border-gray-200">
        <div class="flex items-center gap-2 mb-2">
          <span class="text-xl">📺</span>
          <span class="text-sm text-gray-500">視聴動画</span>
        </div>
        <p class="text-2xl font-bold text-gray-900"><%= @total_posts %></p>
      </div>

      <%# 総アウトプット %>
      <div class="bg-white rounded-xl p-4 border border-gray-200">
        <div class="flex items-center gap-2 mb-2">
          <span class="text-xl">📝</span>
          <span class="text-sm text-gray-500">アウトプット</span>
        </div>
        <p class="text-2xl font-bold text-gray-900"><%= @total_entries %></p>
      </div>

      <%# 達成率 %>
      <div class="bg-white rounded-xl p-4 border border-gray-200">
        <div class="flex items-center gap-2 mb-2">
          <span class="text-xl">🎯</span>
          <span class="text-sm text-gray-500">達成率</span>
        </div>
        <p class="text-2xl font-bold text-gray-900"><%= @achievement_rate %>%</p>
        <p class="text-xs text-gray-400"><%= @achieved_count %>/<%= @action_count %> 達成</p>
      </div>

      <%# 連続日数 %>
      <div class="bg-white rounded-xl p-4 border border-gray-200">
        <div class="flex items-center gap-2 mb-2">
          <span class="text-xl">🔥</span>
          <span class="text-sm text-gray-500">連続記録</span>
        </div>
        <p class="text-2xl font-bold text-gray-900"><%= @current_streak %></p>
        <p class="text-xs text-gray-400">日連続</p>
      </div>
    </div>

    <div class="grid md:grid-cols-2 gap-6">
      <%# アウトプットタイプ別 %>
      <div class="bg-white rounded-xl p-6 border border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">アウトプット内訳</h2>

        <% if @total_entries > 0 %>
          <div class="space-y-4">
            <%# 要約 %>
            <div>
              <div class="flex items-center justify-between text-sm mb-1">
                <span class="flex items-center gap-1">
                  <span>📝</span> 要約
                </span>
                <span class="font-medium"><%= @key_point_count %> (<%= (@key_point_count.to_f / @total_entries * 100).round %>%)</span>
              </div>
              <div class="h-2 bg-gray-100 rounded-full overflow-hidden">
                <div class="h-full bg-blue-500 rounded-full" style="width: <%= @key_point_count.to_f / @total_entries * 100 %>%"></div>
              </div>
            </div>

            <%# 引用 %>
            <div>
              <div class="flex items-center justify-between text-sm mb-1">
                <span class="flex items-center gap-1">
                  <span>💬</span> 引用
                </span>
                <span class="font-medium"><%= @quote_count %> (<%= (@quote_count.to_f / @total_entries * 100).round %>%)</span>
              </div>
              <div class="h-2 bg-gray-100 rounded-full overflow-hidden">
                <div class="h-full bg-purple-500 rounded-full" style="width: <%= @quote_count.to_f / @total_entries * 100 %>%"></div>
              </div>
            </div>

            <%# アクション %>
            <div>
              <div class="flex items-center justify-between text-sm mb-1">
                <span class="flex items-center gap-1">
                  <span>🎯</span> アクション
                </span>
                <span class="font-medium"><%= @action_count %> (<%= (@action_count.to_f / @total_entries * 100).round %>%)</span>
              </div>
              <div class="h-2 bg-gray-100 rounded-full overflow-hidden">
                <div class="h-full bg-orange-500 rounded-full" style="width: <%= @action_count.to_f / @total_entries * 100 %>%"></div>
              </div>
            </div>
          </div>
        <% else %>
          <p class="text-gray-400 text-center py-8">まだデータがありません</p>
        <% end %>
      </div>

      <%# 満足度分布 %>
      <div class="bg-white rounded-xl p-6 border border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">満足度分布</h2>

        <% if @average_satisfaction > 0 %>
          <div class="text-center mb-6">
            <p class="text-4xl font-bold text-yellow-500">
              <%= "★" * @average_satisfaction.round %><%= "☆" * (5 - @average_satisfaction.round) %>
            </p>
            <p class="text-sm text-gray-500 mt-1">平均 <%= @average_satisfaction %> / 5.0</p>
          </div>

          <div class="space-y-2">
            <% (1..5).reverse_each do |rating| %>
              <div class="flex items-center gap-2 text-sm">
                <span class="w-8 text-right"><%= rating %>★</span>
                <div class="flex-1 h-3 bg-gray-100 rounded-full overflow-hidden">
                  <% count = @satisfaction_distribution[rating] || 0 %>
                  <% max_count = @satisfaction_distribution.values.max || 1 %>
                  <div class="h-full bg-yellow-400 rounded-full" style="width: <%= count.to_f / max_count * 100 %>%"></div>
                </div>
                <span class="w-8 text-gray-500"><%= @satisfaction_distribution[rating] || 0 %></span>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-400 text-center py-8">まだ評価がありません</p>
        <% end %>
      </div>
    </div>

    <%# 過去30日間の活動 %>
    <div class="mt-6 bg-white rounded-xl p-6 border border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">過去30日間の活動</h2>

      <div class="flex items-end gap-1 h-32">
        <% max_count = [@daily_counts.values.max || 1, 1].max %>
        <% @daily_counts.each do |date, count| %>
          <div class="flex-1 flex flex-col items-center group relative">
            <div class="w-full bg-gray-100 rounded-t relative"
                 style="height: <%= [count.to_f / max_count * 100, 5].max %>%">
              <% if count > 0 %>
                <div class="absolute inset-0 bg-orange-500 rounded-t"></div>
              <% end %>
            </div>
            <%# ツールチップ %>
            <div class="absolute bottom-full mb-2 hidden group-hover:block z-10">
              <div class="bg-gray-900 text-white text-xs rounded px-2 py-1 whitespace-nowrap">
                <%= Date.parse(date).strftime("%-m/%-d") %>: <%= count %>件
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="flex justify-between text-xs text-gray-400 mt-2">
        <span>30日前</span>
        <span>今日</span>
      </div>
    </div>

    <%# 人気チャンネル %>
    <% if @top_channels.any? %>
      <div class="mt-6 bg-white rounded-xl p-6 border border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">よく見るチャンネル TOP5</h2>

        <div class="space-y-3">
          <% @top_channels.each_with_index do |(channel, count), index| %>
            <div class="flex items-center gap-3">
              <span class="w-6 h-6 flex items-center justify-center rounded-full bg-gray-100 text-xs font-medium text-gray-600">
                <%= index + 1 %>
              </span>
              <span class="flex-1 text-gray-900 truncate"><%= channel %></span>
              <span class="text-sm text-gray-500"><%= count %>本</span>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <%# ナビゲーション %>
    <div class="mt-8 flex justify-center">
      <%= link_to mypage_path, class: "text-sm text-gray-500 hover:text-gray-700" do %>
        ← マイページに戻る
      <% end %>
    </div>
  </div>
</div>
